<Page
    x:Class="XMCL2025.Views.联机大厅Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:XMCL2025.ViewModels"
    mc:Ignorable="d">



    <Grid x:Name="ContentArea" Padding="40,60,40,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32">
            <TextBlock
                Text="联机大厅"
                Style="{ThemeResource TitleTextBlockStyle}" 
                FontSize="36" 
                FontWeight="Bold" />
            <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,8,0,0">
                <TextBlock
                    Style="{ThemeResource BodyTextBlockStyle}" 
                    FontSize="16" 
                    Opacity="0.8">
                    <Run Text="房间ID: " />
                    <Run Text="{x:Bind ViewModel.RoomId, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- 房间信息卡片 -->
        <Grid Grid.Row="1" Margin="0,0,0,32">
            <Border
                Background="{ThemeResource CardBackgroundFillColorDefault}"
                BorderBrush="{ThemeResource CardStrokeColorDefault}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24">
                <Grid ColumnDefinitions="Auto,24,Auto,24,Auto,24,Auto" RowDefinitions="Auto">
                    <!-- 房主名称 -->
                    <StackPanel Grid.Column="0" Spacing="4">
                        <TextBlock 
                            Text="房主"
                            Style="{ThemeResource CaptionTextBlockStyle}" 
                            Opacity="0.7" />
                        <TextBlock 
                            Text="{x:Bind ViewModel.HostName, Mode=OneWay}"
                            Style="{ThemeResource BodyTextBlockStyle}" 
                            FontSize="20" 
                            FontWeight="SemiBold" />
                    </StackPanel>
                    
                    <!-- 分隔线 -->
                    <Border Grid.Column="1" Background="{ThemeResource DividerStrokeColorDefault}" Width="1" Height="40" VerticalAlignment="Center" />
                    
                    <!-- EasyTier版本 -->
                    <StackPanel Grid.Column="2" Spacing="4">
                        <TextBlock 
                            Text="EasyTier版本"
                            Style="{ThemeResource CaptionTextBlockStyle}" 
                            Opacity="0.7" />
                        <TextBlock 
                            Text="{x:Bind ViewModel.EasyTierVersion, Mode=OneWay}"
                            Style="{ThemeResource BodyTextBlockStyle}" 
                            FontSize="20" 
                            FontWeight="SemiBold" />
                    </StackPanel>
                    
                    <!-- 分隔线 -->
                    <Border Grid.Column="3" Background="{ThemeResource DividerStrokeColorDefault}" Width="1" Height="40" VerticalAlignment="Center" />
                    
                    <!-- 房间ID -->
                    <StackPanel Grid.Column="4" Spacing="4">
                        <TextBlock 
                            Text="房间号"
                            Style="{ThemeResource CaptionTextBlockStyle}" 
                            Opacity="0.7" />
                        <Border 
                            Background="Transparent"
                            Padding="4,2"
                            PointerEntered="RoomIdBorder_PointerEntered"
                            PointerExited="RoomIdBorder_PointerExited"
                            Tapped="RoomIdBorder_Tapped"
                            CornerRadius="4">
                            <TextBlock 
                                Text="{x:Bind ViewModel.RoomId, Mode=OneWay}"
                                Style="{ThemeResource BodyTextBlockStyle}" 
                                FontSize="20" 
                                FontWeight="SemiBold" 
                                FontFamily="Consolas" 
                                x:Name="RoomIdTextBlock"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- 分隔线 -->
                    <Border Grid.Column="5" Background="{ThemeResource DividerStrokeColorDefault}" Width="1" Height="40" VerticalAlignment="Center" />
                    
                    <!-- 退出按钮 -->
                    <Button 
                        Grid.Column="6" 
                        Command="{x:Bind ViewModel.BackCommand}"
                        Content="退出房间"
                        Style="{StaticResource DefaultButtonStyle}" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" />
                </Grid>
            </Border>
        </Grid>

        <!-- 占位内容 -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
            <FontIcon 
                FontFamily="{StaticResource SymbolThemeFontFamily}" 
                Glyph="&#xe716;" 
                FontSize="64" 
                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
            <TextBlock 
                Text="等待其他玩家加入..." 
                Style="{ThemeResource BodyTextBlockStyle}" 
                FontSize="18" 
                Opacity="0.7" 
                TextAlignment="Center" />
        </StackPanel>
    </Grid>
</Page>