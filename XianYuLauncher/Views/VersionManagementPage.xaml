<Page
    x:Class="XianYuLauncher.Views.VersionManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:XianYuLauncher.ViewModels"
    xmlns:local="using:XianYuLauncher.Views"
    xmlns:helpers="using:XianYuLauncher.Helpers"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea" Padding="40,60,40,20" AllowDrop="True" DragEnter="ContentArea_DragEnter" DragOver="ContentArea_DragOver" DragLeave="ContentArea_DragLeave" Drop="ContentArea_Drop">
        <Grid.Resources>
        
        <!-- 文本样式 -->
        <Style TargetType="TextBlock" x:Key="PageTitleStyle">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}" />
        </Style>
        
        <Style TargetType="TextBlock" x:Key="BodyTextStyle">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
        </Style>
        
        <!-- 卡片样式 -->
        <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" />
        <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="{ThemeResource SystemControlForegroundBaseLowBrush}" />
        
        <!-- 转换器引用 -->
        <helpers:BoolNegationConverter x:Key="BoolNegationConverter" />
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <helpers:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
        <helpers:PathToUriConverter x:Key="PathToUriConverter" />
        <helpers:StringNullOrEmptyToBoolConverter x:Key="StringNullOrEmptyToVisibilityConverter" />
        <helpers:DoubleToPercentageConverter x:Key="DoubleToPercentageConverter" />
        
        <!-- 简化的CheckBox样式，精确控制点击区域 -->
        <Style x:Key="CustomCheckboxStyle" TargetType="CheckBox">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0,0,8,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        

    </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- 拖放状态视觉反馈覆盖层 -->
        <Grid x:Name="DragDropOverlay" Background="{ThemeResource SystemControlAcrylicElementBrush}" BorderThickness="0" CornerRadius="12" Visibility="Collapsed" Canvas.ZIndex="1000" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8B7;" FontSize="100" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" HorizontalAlignment="Center"/>
                <TextBlock x:Uid="VersionManagerPage_DragDropTip" Style="{StaticResource PageTitleStyle}" FontSize="20" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        
        <!-- 转移Mod到其他版本弹窗 -->
        <ContentDialog
            x:Name="MoveModsDialog"
            x:Uid="VersionManagerPage_MoveModsDialog"
            PrimaryButtonText="确认"
            CloseButtonText="取消"
            DefaultButton="Primary"
            PrimaryButtonClick="MoveModsDialog_PrimaryButtonClick"
            CloseButtonClick="MoveModsDialog_CloseButtonClick">
            <StackPanel Spacing="12">
                <TextBlock x:Uid="VersionManagerPage_MoveModsDialog_InstructionText" Text="请选择要转移到的Minecraft版本：" FontSize="14" />
                <ListView
                    x:Name="TargetVersionListView"
                    ItemsSource="{Binding TargetVersions, Mode=OneWay}"
                    SelectedItem="{Binding SelectedTargetVersion, Mode=TwoWay}"
                    SelectionMode="Single"
                    MaxHeight="300">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8">
                                <TextBlock
                                    Text="{Binding VersionName}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ContentDialog>
        
        <!-- 转移Mod结果弹窗 -->
        <ContentDialog
            x:Name="MoveResultDialog"
            x:Uid="VersionManagerPage_MoveResultDialog"
            PrimaryButtonText="确定"
            DefaultButton="Primary"
            PrimaryButtonClick="MoveResultDialog_PrimaryButtonClick">
            <StackPanel Spacing="12">
                <TextBlock x:Uid="VersionManagerPage_MoveResultDialog_InstructionText" Text="以下是Mod转移结果：" FontSize="14" />
                <ListView
                    x:Name="MoveResultListView"
                    ItemsSource="{Binding MoveResults, Mode=OneWay}"
                    MaxHeight="400">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Text="{Binding ModName}"
                                    Opacity="{Binding IsGrayedOut, Converter={StaticResource BoolToOpacityConverter}, ConverterParameter='1.0,0.5'}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Text="{Binding StatusText}"
                                    Opacity="{Binding IsGrayedOut, Converter={StaticResource BoolToOpacityConverter}, ConverterParameter='1.0,0.5'}"
                                    Style="{ThemeResource CaptionTextBlockStyle}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ContentDialog>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32">
            <TextBlock x:Name="PageTitle" Style="{StaticResource PageTitleStyle}" FontSize="36" FontWeight="Bold" />
            <TextBlock x:Name="PageSubtitle" Style="{StaticResource BodyTextStyle}" Margin="0,8,0,0" Opacity="0.7" />
        </StackPanel>

        <!-- 控制区域 -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.ColumnSpacing>12</Grid.ColumnSpacing>
            
            <!-- 打开文件夹按钮 -->
                <Button 
                    Grid.Column="1"
                    x:Uid="VersionManagerPage_OpenFolderButton"
                    Command="{Binding OpenCurrentFolderCommand}"
                    Style="{StaticResource DefaultButtonStyle}" />
            
            <!-- 刷新按钮 -->
                <Button 
                    Grid.Column="2"
                    x:Uid="VersionManagerPage_RefreshButton"
                    Command="{Binding RefreshDataCommand}"
                    IsEnabled="{Binding IsLoading, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                    Style="{StaticResource DefaultButtonStyle}" />
        </Grid>

        <!-- 加载指示器 -->
        <ProgressRing
            Grid.Row="2"
            Margin="0"
            IsActive="{Binding IsLoading, Mode=OneWay}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Visibility="{Binding IsLoading, Mode=OneWay}"
            Width="48"
            Height="48"
            Foreground="{ThemeResource SystemControlHighlightAccentBrush}"/>
        
        <!-- 主内容区域 - TabView -->
        <TabView 
            x:Name="MainTabView"
            Grid.Row="2"
            Visibility="{Binding IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"
            Background="Transparent"
            BorderThickness="0"
            SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
            <TabView.Resources>
                <Style TargetType="TabViewItem">
                    <Setter Property="IsClosable" Value="False" />
                </Style>
            </TabView.Resources>
            
            <!-- 设置模块 -->
            <TabViewItem>
                <TabViewItem.Header>
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <FontIcon Glyph="" FontSize="16" />
                        <TextBlock x:Uid="VersionManagerPage_SettingsTab" Text="设置" VerticalAlignment="Center" />
                    </StackPanel>
                </TabViewItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <!-- 设置内容 -->
                    <ScrollViewer Grid.Row="1" Margin="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Spacing="16" Padding="0,0,0,24">
                            <!-- 内存分配设置 -->
                            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- 标题 -->
                                <TextBlock Grid.Row="0" Grid.ColumnSpan="4" x:Uid="VersionManagerPage_MemoryAllocationTitle" FontSize="16" FontWeight="Bold" Margin="0,0,0,16" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                                
                                <!-- 自动分配开关 -->
                                <TextBlock Grid.Row="1" Grid.Column="0" x:Uid="VersionManagerPage_AutoMemoryAllocation" VerticalAlignment="Center" Margin="0,0,16,0" Style="{StaticResource BodyTextStyle}" />
                                <ToggleSwitch x:Uid="VersionManagerPage_AutoMemoryToggle" Grid.Row="1" Grid.Column="1" IsOn="{Binding AutoMemoryAllocation, Mode=TwoWay}" Margin="0,0,16,16" />
                                
                                <!-- 初始堆内存 -->
                                <TextBlock Grid.Row="2" Grid.Column="0" x:Uid="VersionManagerPage_InitialHeapMemory" VerticalAlignment="Center" Margin="0,0,16,16" Style="{StaticResource BodyTextStyle}" />
                                <NumberBox Grid.Row="2" Grid.Column="1" 
                                           Value="{Binding InitialHeapMemory, Mode=TwoWay}" 
                                           Minimum="1" 
                                           Maximum="64" 
                                           SpinButtonPlacementMode="Inline" 
                                           HorizontalAlignment="Stretch" 
                                           Margin="0,0,16,16" 
                                           PlaceholderText="6.0"
                                           IsEnabled="{Binding AutoMemoryAllocation, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
                                <TextBlock Grid.Row="2" Grid.Column="2" x:Uid="VersionManagerPage_GBUnit" VerticalAlignment="Center" Margin="0,0,16,16" Style="{StaticResource BodyTextStyle}" />
                                
                                <!-- 最大堆内存 -->
                                <TextBlock Grid.Row="3" Grid.Column="0" x:Uid="VersionManagerPage_MaximumHeapMemory" VerticalAlignment="Center" Margin="0,0,16,0" Style="{StaticResource BodyTextStyle}" />
                                <NumberBox Grid.Row="3" Grid.Column="1" 
                                           Value="{Binding MaximumHeapMemory, Mode=TwoWay}" 
                                           Minimum="1" 
                                           Maximum="64" 
                                           SpinButtonPlacementMode="Inline" 
                                           HorizontalAlignment="Stretch" 
                                           Margin="0,0,16,0" 
                                           PlaceholderText="12.0"
                                           IsEnabled="{Binding AutoMemoryAllocation, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
                                <TextBlock Grid.Row="3" Grid.Column="2" Text="GB" VerticalAlignment="Center" Margin="0,0,16,0" Style="{StaticResource BodyTextStyle}" />
                            </Grid>
                            
                            <!-- Java设置 -->
                            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- 标题 -->
                                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" x:Uid="VersionManagerPage_JavaSettingsTitle" FontSize="16" FontWeight="Bold" Margin="0,0,0,16" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                                
                                <!-- Java设置模式 -->
                                <TextBlock Grid.Row="1" Grid.Column="0" x:Uid="VersionManagerPage_JavaSettingMode" VerticalAlignment="Center" Margin="0,0,16,16" Style="{StaticResource BodyTextStyle}" />
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="16" Margin="0,0,0,16">
                                    <RadioButton 
                                        x:Uid="VersionManagerPage_FollowGlobalSetting"
                                        GroupName="JavaSettingMode" 
                                        IsChecked="{Binding UseGlobalJavaSetting, Mode=TwoWay}" 
                                        VerticalAlignment="Center" />
                                    <RadioButton 
                                        x:Uid="VersionManagerPage_SelectJava"
                                        GroupName="JavaSettingMode" 
                                        IsChecked="{Binding UseGlobalJavaSetting, Mode=TwoWay, Converter={StaticResource BoolNegationConverter}}" 
                                        VerticalAlignment="Center" />
                                </StackPanel>
                                
                                <!-- Java路径 -->
                                <TextBlock Grid.Row="2" Grid.Column="0" x:Uid="VersionManagerPage_JavaPath" VerticalAlignment="Center" Margin="0,0,16,0" Style="{StaticResource BodyTextStyle}" />
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox 
                                        Grid.Column="0" 
                                        Text="{Binding JavaPath, Mode=TwoWay}" 
                                        x:Uid="VersionManagerPage_BrowseJavaPlaceholder"
                                        IsEnabled="{Binding UseGlobalJavaSetting, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" 
                                        Margin="0,0,8,0" />
                                    <Button 
                                        Grid.Column="1" 
                                        x:Uid="VersionManagerPage_BrowseButton"
                                        Command="{Binding BrowseJavaCommand}" 
                                        Style="{StaticResource DefaultButtonStyle}" 
                                        Height="32" 
                                        Padding="10,0,10,0" 
                                        IsEnabled="{Binding UseGlobalJavaSetting, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
                                </Grid>
                            </Grid>
                            
                            <!-- 启动分辨率设置 -->
                            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- 标题 -->
                                <TextBlock Grid.Row="0" Grid.ColumnSpan="6" x:Uid="VersionManagerPage_ResolutionSettingTitle" FontSize="16" FontWeight="Bold" Margin="0,0,0,16" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                                
                                <!-- 宽度 -->
                                <TextBlock Grid.Row="1" Grid.Column="0" x:Uid="VersionManagerPage_Width" VerticalAlignment="Center" Margin="0,0,8,0" Style="{StaticResource BodyTextStyle}" />
                                <NumberBox Grid.Row="1" Grid.Column="1" Value="{Binding WindowWidth, Mode=TwoWay}" Minimum="800" Maximum="4096" Width="120" Margin="0,0,8,0" />
                                <TextBlock Grid.Row="1" Grid.Column="2" x:Uid="VersionManagerPage_PxUnit" VerticalAlignment="Center" Margin="0,0,16,0" Style="{StaticResource BodyTextStyle}" />
                                
                                <!-- 高度 -->
                                <TextBlock Grid.Row="1" Grid.Column="3" x:Uid="VersionManagerPage_Height" VerticalAlignment="Center" Margin="0,0,8,0" Style="{StaticResource BodyTextStyle}" />
                                <NumberBox Grid.Row="1" Grid.Column="4" Value="{Binding WindowHeight, Mode=TwoWay}" Minimum="600" Maximum="2160" Width="120" Margin="0,0,8,0" />
                                <TextBlock Grid.Row="1" Grid.Column="5" x:Uid="VersionManagerPage_PxUnit" VerticalAlignment="Center" Style="{StaticResource BodyTextStyle}" />
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabViewItem>

            <!-- Mod管理模块 -->
            <TabViewItem>
                <TabViewItem.Header>
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <FontIcon Glyph="" FontSize="16" />
                        <TextBlock x:Uid="VersionManagerPage_ModManagementTab" Text="Mod管理" VerticalAlignment="Center" />
                    </StackPanel>
                </TabViewItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    

                    
                    <!-- Mod列表容器 -->
                    <Grid Grid.Row="1" AllowDrop="True">
                        <!-- Mod列表 -->
                        <ListView 
                            x:Name="ModListView"
                            ItemsSource="{Binding Mods, Mode=OneWay}"
                            SelectionMode="Single"
                            IsItemClickEnabled="False"
                            CanReorderItems="False"
                            AllowDrop="True"
                            Background="Transparent"
                            BorderThickness="0"
                            VerticalAlignment="Stretch">
                            <ListView.Resources>
                                <Style TargetType="ScrollViewer">
                                    <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
                                    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                                    <Setter Property="IsScrollInertiaEnabled" Value="True"/>
                                </Style>
                            </ListView.Resources>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <!-- 使用ItemsStackPanel替代ScrollViewer+ListView，提供更好的性能和虚拟化支持 -->
                                    <ItemsStackPanel/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,0,0,16"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <!-- 优化布局性能 -->
                                    <Setter Property="UseLayoutRounding" Value="True"/>
                                    <Setter Property="CacheMode" Value="BitmapCache"/>
                                    <!-- 简化模板，移除复杂的VisualStateManager，使用默认模板 -->
                                </Style>
                            </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="viewModels:ModInfo">
                                        <Grid Height="60" 
                                              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                              CornerRadius="8" 
                                              Padding="16,8,16,8" 
                                              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                              BorderThickness="1">
                                            <!-- 右键菜单 -->
                                            <Grid.ContextFlyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="{Binding DataContext.SelectAllMenuItemText, ElementName=ModListView}" Command="{Binding DataContext.SelectAllModsCommand, ElementName=ModListView}">
                                                        <MenuFlyoutItem.Icon>
                                                            <SymbolIcon Symbol="AllApps" />
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                    <MenuFlyoutItem x:Uid="VersionManagerPage_UpdateModsMenuItem" Command="{Binding DataContext.UpdateModsCommand, ElementName=ModListView}">
                                                        <MenuFlyoutItem.Icon>
                                                            <SymbolIcon Symbol="Refresh" />
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                    <MenuFlyoutItem x:Uid="VersionManagerPage_MoveModsMenuItem" Command="{Binding DataContext.MoveModsToOtherVersionCommand, ElementName=ModListView}">
                                                        <MenuFlyoutItem.Icon>
                                                            <SymbolIcon Symbol="MoveToFolder" />
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                </MenuFlyout>
                                            </Grid.ContextFlyout>
                                            
                                            <Grid.ColumnDefinitions>
                                                <!-- 复选框列 -->
                                                <ColumnDefinition Width="Auto" />
                                                <!-- Mod图标列 -->
                                                <ColumnDefinition Width="Auto" />
                                                <!-- Mod名称列 -->
                                                <ColumnDefinition Width="*" />
                                                <!-- 启用/禁用开关列 -->
                                                <ColumnDefinition Width="Auto" />
                                                <!-- 删除按钮列 -->
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- 多选复选框容器 -->
                                            <Grid Grid.Column="0" Width="24" Height="Auto" Margin="0,0,8,0">
                                                <!-- 复选框 -->
                                                <CheckBox 
                                                    IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                    Visibility="Visible"/>
                                            </Grid>
                                            
                                            <!-- Mod图标 -->
                                            <Grid Grid.Column="1" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,12,0">
                                                <FontIcon 
                                                    Glyph="" 
                                                    FontSize="20" 
                                                    VerticalAlignment="Center" 
                                                    HorizontalAlignment="Center"
                                                    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                                    Visibility="{Binding Icon, Mode=OneWay, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}, ConverterParameter=inverse}"/>
                                                <Image 
                                                    Source="{Binding Icon, Mode=OneWay, Converter={StaticResource PathToUriConverter}}" 
                                                    Width="24" 
                                                    Height="24" 
                                                    Stretch="UniformToFill"
                                                    Visibility="{Binding Icon, Mode=OneWay, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                                            </Grid>
                                            
                                            <!-- Mod名称 -->
                                            <TextBlock 
                                                Grid.Column="2"
                                                Text="{Binding Name}" 
                                                VerticalAlignment="Center" 
                                                FontSize="14" 
                                                FontWeight="Medium"
                                                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                                            
                                            <!-- 启用/禁用开关 -->
                                            <ToggleSwitch 
                                                Grid.Column="3"
                                                IsOn="{Binding IsEnabled, Mode=OneWay}" 
                                                x:Uid="VersionManagerPage_EnabledText"
                                                OffContent="禁用" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Center"
                                                Margin="12,0,12,0" 
                                                Toggled="ModToggleSwitch_Toggled"
                                                RequestedTheme="Default" 
                                                Width="70"/>
                                            
                                            <!-- 删除按钮 -->
                                            <Button 
                                                Grid.Column="4"
                                                x:Uid="VersionManagerPage_DeleteButton"
                                                VerticalAlignment="Center" 
                                                Command="{Binding DataContext.DeleteModCommand, ElementName=ModListView}" 
                                                CommandParameter="{Binding}" 
                                                Style="{StaticResource DefaultButtonStyle}"
                                                Height="28" 
                                                Padding="10,0,10,0" 
                                                FontSize="11" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        
                        <!-- 空列表提示 -->
                        <StackPanel 
                            x:Name="ModEmptyPanel"
                            Visibility="{Binding IsModListEmpty, Converter={StaticResource BoolToVisibilityConverter}}"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Margin="0,100,0,0"
                            Padding="60,40,60,40"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="16"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                            <FontIcon 
                                FontFamily="{StaticResource SymbolThemeFontFamily}" 
                                Glyph="&#xE8B7;" 
                                FontSize="80" 
                                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                                Margin="0,0,0,24" 
                                HorizontalAlignment="Center"/>
                            <TextBlock 
                                x:Uid="VersionManagerPage_NoModsTitle"
                                Style="{StaticResource PageTitleStyle}" 
                                FontSize="20" 
                                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                                TextAlignment="Center" 
                                Margin="0,0,0,8"/>
                            <TextBlock 
                                x:Uid="VersionManagerPage_NoModsDescription"
                                Style="{StaticResource BodyTextStyle}" 
                                Foreground="{ThemeResource SystemControlForegroundBaseMediumLowBrush}" 
                                Margin="0,0,24,0" 
                                TextAlignment="Center" 
                                MaxWidth="300"/>
                            <Button 
                                x:Uid="VersionManagerPage_NavigateToModPageButton"
                                Style="{StaticResource DefaultButtonStyle}" 
                                Command="{Binding NavigateToModPageCommand}" 
                                HorizontalAlignment="Center" 
                                Margin="0,16,0,0" 
                                Width="160"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabViewItem>

            <!-- 光影管理模块 -->
            <TabViewItem>
                <TabViewItem.Header>
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <FontIcon Glyph="" FontSize="16" />
                        <TextBlock x:Uid="VersionManagerPage_ShaderManagementTab" Text="光影管理" VerticalAlignment="Center" />
                    </StackPanel>
                </TabViewItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    

                    
                    <!-- 光影列表容器 -->
                    <Grid Grid.Row="1" AllowDrop="True">
                        <!-- 光影列表 -->
                        <ListView 
                            x:Name="ShaderListView"
                            ItemsSource="{Binding Shaders, Mode=OneWay}"
                            SelectionMode="Single"
                            IsItemClickEnabled="False"
                            CanReorderItems="False"
                            AllowDrop="True"
                            Background="Transparent"
                            BorderThickness="0"
                            VerticalAlignment="Stretch">
                            <ListView.Resources>
                                <Style TargetType="ScrollViewer">
                                    <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
