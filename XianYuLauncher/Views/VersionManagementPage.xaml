                                <ItemsPanelTemplate>
                                    <!-- 使用ItemsStackPanel替代ScrollViewer+ListView，提供更好的性能和虚拟化支持 -->
                                    <ItemsStackPanel/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,0,0,16"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <!-- 优化布局性能 -->
                                    <Setter Property="UseLayoutRounding" Value="True"/>
                                    <Setter Property="CacheMode" Value="BitmapCache"/>
                                    <!-- 简化模板，移除复杂的VisualStateManager，使用默认模板 -->
                                </Style>
                            </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:MapInfo">
                                        <Grid Height="60" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                              CornerRadius="8" Padding="16" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                              BorderThickness="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- 地图图标 -->
                                            <Grid Grid.Column="0" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,12,0">
                                                <FontIcon 
                                                    Glyph="" 
                                                    FontSize="20" 
                                                    VerticalAlignment="Center" 
                                                    HorizontalAlignment="Center"
                                                    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                                    Visibility="{Binding Icon, Mode=OneWay, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}, ConverterParameter=inverse}"/>
                                                <Image 
                                                    Source="{Binding Icon, Mode=OneWay, Converter={StaticResource PathToUriConverter}}" 
                                                    Width="24" 
                                                    Height="24" 
                                                    Stretch="UniformToFill"
                                                    Visibility="{Binding Icon, Mode=OneWay, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                                            </Grid>
                                            
                                            <!-- 地图名称 -->
                                            <TextBlock 
                                                Grid.Column="1"
                                                Text="{Binding Name}" 
                                                VerticalAlignment="Center" 
                                                FontSize="14" 
                                                FontWeight="Medium"
                                                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                                            
                                            <!-- 删除按钮 -->
                                            <Button 
                                                Grid.Column="2"
                                                Content="删除" 
                                                VerticalAlignment="Center" 
                                                Command="{Binding DataContext.DeleteMapCommand, ElementName=MapListView}" 
                                                CommandParameter="{Binding}" 
                                                Style="{StaticResource DefaultButtonStyle}"
                                                Height="28" 
                                                Padding="10,0,10,0" 
                                                FontSize="11" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        
                        <!-- 空列表提示 -->
                        <StackPanel 
                            x:Name="MapsEmptyPanel"
                            Visibility="{Binding IsMapListEmpty, Converter={StaticResource BoolToVisibilityConverter}}"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Margin="0,100,0,0"
                            Padding="60,40,60,40"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="16"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                            <FontIcon 
                                FontFamily="{StaticResource SymbolThemeFontFamily}" 
                                Glyph="&#xE8B7;" 
                                FontSize="80" 
                                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                                Margin="0,0,0,24" 
                                HorizontalAlignment="Center"/>
                            <TextBlock 
                                x:Uid="VersionManagerPage_NoMapsTitle" 
                                Style="{StaticResource PageTitleStyle}" 
                                FontSize="20" 
                                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                                TextAlignment="Center" 
                                Margin="0,0,0,8"/>
                            <TextBlock 
                                x:Uid="VersionManagerPage_NoMapsDescription" 
                                Style="{StaticResource BodyTextStyle}" 
                                Foreground="{ThemeResource SystemControlForegroundBaseMediumLowBrush}" 
                                Margin="0,0,24,0" 
                                TextAlignment="Center" 
                                MaxWidth="300"/>
                            <Button 
                                x:Uid="VersionManagerPage_NavigateToMapPageButton" 
                                Style="{StaticResource DefaultButtonStyle}" 
                                Command="{Binding NavigateToMapPageCommand}" 
                                HorizontalAlignment="Center" 
                                Margin="0,16,0,0" 
                                Width="160"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabViewItem>
        </TabView>
        <!-- 扩展安装进度弹窗 -->
        <ContentDialog 
            x:Name="ExtensionInstallDialog"
            Grid.RowSpan="3"
            x:Uid="VersionManagerPage_ExtensionInstallDialog"
            Title="安装加载器"
            PrimaryButtonText=""
            IsPrimaryButtonEnabled="False"
            CloseButtonText=""
            DefaultButton="None"
            Width="400">
            <StackPanel Spacing="16">
                <!-- 当前安装状态 -->
                <TextBlock 
                    Text="{Binding ExtensionInstallStatus, Mode=OneWay}" 
                    FontSize="16" 
                    FontWeight="Medium"
                    TextWrapping="WrapWholeWords"/>
                
                <!-- 进度条 -->
                <ProgressBar 
                    Value="{Binding ExtensionInstallProgress, Mode=OneWay}" 
                    Minimum="0" 
                    Maximum="100" 
                    Height="8"
                    CornerRadius="4"/>
                
                <!-- 进度百分比 -->
                <TextBlock 
                    Text="{Binding ExtensionInstallProgress, Mode=OneWay, Converter={StaticResource DoubleToPercentageConverter}}" 
                    FontSize="12" 
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    HorizontalAlignment="Right"/>
            </StackPanel>
        </ContentDialog>
        
        <!-- 下载进度弹窗 -->
        <ContentDialog 
            x:Name="DownloadProgressDialog"
            Grid.RowSpan="3"
            Title="{Binding DownloadProgressDialogTitle, Mode=OneWay}"
            PrimaryButtonText=""
            IsPrimaryButtonEnabled="False"
            CloseButtonText=""
            DefaultButton="None"
            Width="400">
            <StackPanel Spacing="16">
                <!-- 当前下载项 -->
                <TextBlock 
                    Text="{Binding CurrentDownloadItem, Mode=OneWay}" 
                    FontSize="16" 
                    FontWeight="Medium"
                    TextWrapping="WrapWholeWords"/>
                
                <!-- 进度条 -->
                <ProgressBar 
                    Value="{Binding DownloadProgress, Mode=OneWay}" 
                    Minimum="0" 
                    Maximum="100" 
                    Height="8"
                    CornerRadius="4"/>
                

            </StackPanel>
        </ContentDialog>
        
        <!-- 结果弹窗 -->
        <ContentDialog 
            x:Name="ResultDialog"
            Grid.RowSpan="3"
            x:Uid="VersionManagerPage_UpdateResultDialog"
            Title="更新完成"
            PrimaryButtonText="确定"
            IsPrimaryButtonEnabled="True"
            DefaultButton="Primary"
            Width="400"
            PrimaryButtonClick="ResultDialog_PrimaryButtonClick">
            <!-- 结果信息 -->
            <TextBlock 
                Text="{Binding UpdateResults, Mode=OneWay}" 
                FontSize="14" 
                TextWrapping="WrapWholeWords" 
                HorizontalAlignment="Center"/>
        </ContentDialog>
        
        <!-- 地图详情对话框 -->
        <ContentDialog 
            x:Name="MapDetailDialog"
            Grid.RowSpan="3"
            Title="地图详情"
            CloseButtonText="关闭"
            DefaultButton="Close"
            Width="480">
            <StackPanel Spacing="16">
                <!-- 地图基本信息 - 使用网格布局更紧凑 -->
                <Grid RowSpacing="8" ColumnSpacing="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- 地图名称 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="地图名称" FontSize="13" Foreground="{ThemeResource TextFillColorSecondary}" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedMapForDetail.Name, Mode=OneWay}" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" TextWrapping="Wrap" />
                    
                    <!-- 地图大小 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="地图大小" FontSize="13" Foreground="{ThemeResource TextFillColorSecondary}" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedMapForDetail.Size, Mode=OneWay}" FontSize="14" VerticalAlignment="Center" />
                    
                    <!-- 创建时间 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="创建时间" FontSize="13" Foreground="{ThemeResource TextFillColorSecondary}" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedMapForDetail.FormattedCreationTime, Mode=OneWay}" FontSize="14" VerticalAlignment="Center" />
                    
                    <!-- 最后游玩 -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="最后游玩" FontSize="13" Foreground="{ThemeResource TextFillColorSecondary}" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedMapForDetail.FormattedLastPlayedTime, Mode=OneWay}" FontSize="14" VerticalAlignment="Center" />
                </Grid>
                
                <!-- 游戏信息 - 紧凑显示 -->
                <Grid RowSpacing="8" ColumnSpacing="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- 游戏模式 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="游戏模式" FontSize="13" Foreground="{ThemeResource TextFillColorSecondary}" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedMapForDetail.GameMode, Mode=OneWay}" FontSize="14" VerticalAlignment="Center" />
                    
                    <!-- 难度 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="难度" FontSize="13" Foreground="{ThemeResource TextFillColorSecondary}" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedMapForDetail.Difficulty, Mode=OneWay}" FontSize="14" VerticalAlignment="Center" />
                    
                    <!-- 种子 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="种子" FontSize="13" Foreground="{ThemeResource TextFillColorSecondary}" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedMapForDetail.Seed, Mode=OneWay}" FontSize="14" VerticalAlignment="Center" />
                </Grid>
                
                <!-- 重命名输入框 -->
                <TextBox Header="重命名地图" 
                         Text="{Binding MapRenameInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         PlaceholderText="输入新名称" />
                
                <!-- 操作按钮 - 使用 CommandBar 样式 -->
                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                    <Button Command="{Binding OpenMapFolderCommand}" 
                            ToolTipService.ToolTip="打开文件夹"
                            Width="44" Height="36">
                        <FontIcon Glyph="&#xE8B7;" FontSize="16" />
                    </Button>
                    
                    <Button Command="{Binding RenameMapCommand}" 
                            ToolTipService.ToolTip="重命名"
                            Width="44" Height="36">
                        <FontIcon Glyph="&#xE8AC;" FontSize="16" />
                    </Button>
                    
                    <Button Command="{Binding ExportMapCommand}" 
                            ToolTipService.ToolTip="导出为 ZIP"
                            Width="44" Height="36">
                        <FontIcon Glyph="&#xE8B5;" FontSize="16" />
                    </Button>
                    
                    <Button Command="{Binding DeleteMapFromDetailCommand}" 
                            ToolTipService.ToolTip="删除地图"
                            Width="44" Height="36">
                        <FontIcon Glyph="&#xE74D;" FontSize="16" />
                    </Button>
                </StackPanel>
            </StackPanel>
        </ContentDialog>
    </Grid>
</Page>