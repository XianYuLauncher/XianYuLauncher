<Page
    x:Class="XianYuLauncher.Views.ErrorAnalysisPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XianYuLauncher.Views"
    xmlns:viewModels="using:XianYuLauncher.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- 顶部导航栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="{ThemeResource NavigationViewExpandedPaneBackground}" Padding="16" Spacing="8" VerticalAlignment="Stretch">
            <Button Content="&lt; 返回" Click="BackButton_Click" Style="{StaticResource TextBlockButtonStyle}" VerticalAlignment="Center" />
            <TextBlock x:Uid="ErrorAnalysis_Title" Text="实时游戏日志" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="16,0,0,0" />
        </StackPanel>
        
        <!-- 功能按钮区 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16,10,16,10" Spacing="8" VerticalAlignment="Center">
            <Button x:Uid="ErrorAnalysis_ExportLogButton" Content="导出日志" Command="{x:Bind ViewModel.ExportErrorLogsCommand}" Width="120" Height="36" />
            <Button x:Uid="ErrorAnalysis_CopyLogButton" Content="复制日志" Command="{x:Bind ViewModel.CopyLogsCommand}" Width="120" Height="36" />
            <Button x:Uid="ErrorAnalysis_ContactAuthorButton" Content="联系作者" Command="{x:Bind ViewModel.JoinQQGroupCommand}" Width="120" Height="36" />
        </StackPanel>
        
        <!-- 日志显示区 -->
        <Grid Grid.Row="2" Margin="16,0,16,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <TextBlock x:Uid="ErrorAnalysis_LogDetails" Text="实时日志详情" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />
            
            <Border Grid.Row="1" 
                    Background="{ThemeResource TextControlBackground}" 
                    BorderBrush="{ThemeResource TextControlBorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4">
                <ListView ItemsSource="{x:Bind ViewModel.LogLines, Mode=OneWay}"
                          x:Name="LogListView"
                          SelectionMode="Extended"
                          IsItemClickEnabled="False"
                          Background="Transparent"
                          Padding="8">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <TextBlock Text="{x:Bind}" 
                                       FontFamily="Consolas" 
                                       FontSize="12" 
                                       TextWrapping="Wrap"
                                       Margin="0,2" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="MinHeight" Value="0" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Border>
        </Grid>
        
        <!-- 错误分析区域 -->
        <Grid Grid.Row="3" Margin="16,16,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- 标题栏 -->
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                <FontIcon Glyph="&#xE946;" FontSize="18" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                <TextBlock x:Uid="ErrorAnalysis_AnalysisTitle" Text="崩溃分析" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" />
            </StackPanel>
            
            <!-- 分析结果卡片 - 使用 Mica 背景 -->
            <Border Grid.Row="1" 
                    CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    Background="{ThemeResource LayerFillColorDefaultBrush}">
                
                <Grid Padding="20">
                    <ScrollViewer 
                              VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled" 
                              MaxHeight="300"
                              x:Name="KnowledgeBaseScrollViewer">
                        <TextBlock 
                               Text="{x:Bind ViewModel.AiAnalysisResult, Mode=OneWay}" 
                               TextWrapping="Wrap" 
                               FontSize="14"
                               LineHeight="24"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}" 
                               x:Name="KnowledgeBaseTextBlock" 
                               IsTextSelectionEnabled="True" />
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>