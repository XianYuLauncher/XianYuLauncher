<Page
    x:Class="XianYuLauncher.Views.MultiplayerLobbyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:XianYuLauncher.ViewModels"
    mc:Ignorable="d">



    <Grid x:Name="ContentArea" Padding="40,60,40,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32">
            <TextBlock
                x:Uid="联机大厅Page_Title"
                Text="联机大厅"
                Style="{ThemeResource TitleTextBlockStyle}" 
                FontSize="36" 
                FontWeight="Bold" />
            <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,8,0,0">
                <TextBlock
                    Style="{ThemeResource BodyTextBlockStyle}" 
                    FontSize="16" 
                    Opacity="0.8">
                    <Run x:Uid="联机大厅Page_RoomIdPrefix" Text="房间ID: " />
                    <Run Text="{x:Bind ViewModel.RoomId, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- 房间信息卡片 -->
        <Grid Grid.Row="1" Margin="0,0,0,32">
            <Border
                Background="{ThemeResource CardBackgroundFillColorDefault}"
                BorderBrush="{ThemeResource CardStrokeColorDefault}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24">
                <Grid ColumnDefinitions="Auto,24,Auto,24,Auto,24,Auto" RowDefinitions="Auto">
                    <!-- 房主名称 -->
                    <StackPanel Grid.Column="0" Spacing="4">
                        <TextBlock 
                            Text="{x:Bind ViewModel.HostLabel, Mode=OneWay}"
                            Style="{ThemeResource CaptionTextBlockStyle}" 
                            Opacity="0.7" />
                        <TextBlock 
                            Text="{x:Bind ViewModel.HostName, Mode=OneWay}"
                            Style="{ThemeResource BodyTextBlockStyle}" 
                            FontSize="20" 
                            FontWeight="SemiBold" />
                    </StackPanel>
                    
                    <!-- 分隔线 -->
                    <Border Grid.Column="1" Background="{ThemeResource DividerStrokeColorDefault}" Width="1" Height="40" VerticalAlignment="Center" />
                    
                    <!-- EasyTier版本 -->
                    <StackPanel Grid.Column="2" Spacing="4">
                        <TextBlock 
                            Text="{x:Bind ViewModel.EasyTierLabel, Mode=OneWay}"
                            Style="{ThemeResource CaptionTextBlockStyle}" 
                            Opacity="0.7" />
                        <TextBlock 
                            Text="{x:Bind ViewModel.EasyTierVersion, Mode=OneWay}"
                            Style="{ThemeResource BodyTextBlockStyle}" 
                            FontSize="20" 
                            FontWeight="SemiBold" />
                    </StackPanel>
                    
                    <!-- 分隔线 -->
                    <Border Grid.Column="3" Background="{ThemeResource DividerStrokeColorDefault}" Width="1" Height="40" VerticalAlignment="Center" />
                    
                    <!-- 房间ID -->
                    <StackPanel Grid.Column="4" Spacing="4">
                        <TextBlock 
                            x:Uid="联机大厅Page_RoomNumberLabel"
                            Text="房间号"
                            Style="{ThemeResource CaptionTextBlockStyle}" 
                            Opacity="0.7" />
                        <Border 
                            Background="Transparent"
                            Padding="4,2"
                            PointerEntered="RoomIdBorder_PointerEntered"
                            PointerExited="RoomIdBorder_PointerExited"
                            Tapped="RoomIdBorder_Tapped"
                            CornerRadius="4">
                            <TextBlock 
                                Text="{x:Bind ViewModel.RoomId, Mode=OneWay}"
                                Style="{ThemeResource BodyTextBlockStyle}" 
                                FontSize="20" 
                                FontWeight="SemiBold" 
                                FontFamily="Consolas" 
                                x:Name="RoomIdTextBlock"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- 分隔线 -->
                    <Border Grid.Column="5" Background="{ThemeResource DividerStrokeColorDefault}" Width="1" Height="40" VerticalAlignment="Center" />
                    
                    <!-- 退出按钮 -->
                    <Button 
                        Grid.Column="6" 
                        Command="{x:Bind ViewModel.BackCommand}"
                        x:Uid="联机大厅Page_ExitButton"
                        Content="退出房间"
                        Style="{StaticResource DefaultButtonStyle}" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" />
                </Grid>
            </Border>
        </Grid>

        <!-- 玩家列表 -->
        <StackPanel Grid.Row="2" Spacing="16">
            <!-- 玩家列表标题 -->
            <TextBlock 
                x:Uid="联机大厅Page_PlayerListTitle"
                Text="玩家列表" 
                Style="{ThemeResource TitleTextBlockStyle}" 
                FontSize="20" 
                FontWeight="SemiBold" />
            
            <!-- 玩家列表 -->
            <ItemsControl ItemsSource="{x:Bind ViewModel.PlayerList, Mode=OneWay}" VerticalAlignment="Top">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="viewModels:RoomPlayer">
                        <Border 
                            Background="{ThemeResource CardBackgroundFillColorDefault}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefault}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,4,0,4">
                            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                <!-- 玩家头像 -->
                                <Border 
                                    Width="32" 
                                    Height="32" 
                                    CornerRadius="4" 
                                    Background="{ThemeResource CardBackgroundFillColorSecondary}" 
                                    Padding="4">
                                    <Image 
                                        Source="{x:Bind Avatar, Mode=OneWay}" 
                                        Width="24" 
                                        Height="24" 
                                        Stretch="Fill" />
                                </Border>
                                <!-- 玩家名称 -->
                                <TextBlock 
                                    Text="{x:Bind Name, Mode=OneWay}" 
                                    Style="{ThemeResource BodyTextBlockStyle}" 
                                    FontSize="16" 
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <!-- 当玩家列表为空时显示 -->
            <StackPanel 
                Visibility="{x:Bind ViewModel.IsPlayerListEmpty, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Spacing="16">
                <FontIcon 
                    FontFamily="{StaticResource SymbolThemeFontFamily}" 
                    Glyph="&#xe716;" 
                    FontSize="48" 
                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                <TextBlock 
                    x:Uid="联机大厅Page_EmptyPlayerList"
                    Text="当前没有其他玩家..." 
                    Style="{ThemeResource BodyTextBlockStyle}" 
                    FontSize="16" 
                    Opacity="0.7" 
                    TextAlignment="Center" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>