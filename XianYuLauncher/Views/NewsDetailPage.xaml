<Page
    x:Class="XianYuLauncher.Views.NewsDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 顶部栏 -->
        <Grid Grid.Row="0" Padding="40,36,40,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Button 
                Grid.Column="0"
                Click="BackButton_Click"
                Style="{StaticResource SubtleButtonStyle}"
                Padding="8"
                CornerRadius="4"
                Margin="0,0,12,0"
                VerticalAlignment="Top">
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE72B;" FontSize="16" />
            </Button>
            
            <TextBlock 
                Grid.Column="1"
                Text="新闻详情" 
                Style="{StaticResource TitleTextBlockStyle}" 
                FontWeight="SemiBold"
                VerticalAlignment="Center" />
        </Grid>

        <!-- 内容区域 -->
        <ScrollViewer 
            Grid.Row="1" 
            Padding="40,24,40,24"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20" MaxWidth="800" HorizontalAlignment="Left">
                <!-- 头图 -->
                <Border 
                    x:Name="ImageBorder"
                    CornerRadius="8"
                    Visibility="Collapsed">
                    <Image 
                        x:Name="NewsImage"
                        MaxHeight="300"
                        Stretch="UniformToFill" />
                </Border>

                <!-- 标题 -->
                <TextBlock 
                    x:Name="TitleTextBlock"
                    Style="{StaticResource TitleLargeTextBlockStyle}"
                    FontWeight="Bold"
                    TextWrapping="Wrap" />

                <!-- 元信息 -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Border 
                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                        CornerRadius="4"
                        Padding="8,4">
                        <TextBlock 
                            x:Name="TypeTextBlock"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Foreground="White" />
                    </Border>
                    <Border 
                        Background="{ThemeResource ControlFillColorSecondaryBrush}"
                        CornerRadius="4"
                        Padding="8,4">
                        <TextBlock 
                            x:Name="VersionTextBlock"
                            Style="{StaticResource CaptionTextBlockStyle}" />
                    </Border>
                    <TextBlock 
                        x:Name="DateTextBlock"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        VerticalAlignment="Center" />
                </StackPanel>

                <!-- 分隔线 -->
                <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.5" />

                <!-- 摘要 -->
                <TextBlock 
                    x:Name="ShortTextBlock"
                    Style="{StaticResource BodyTextBlockStyle}"
                    TextWrapping="Wrap"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                <!-- 加载中 -->
                <StackPanel 
                    x:Name="LoadingPanel"
                    Orientation="Horizontal" 
                    Spacing="8"
                    Visibility="Collapsed">
                    <ProgressRing IsActive="True" Width="16" Height="16" />
                    <TextBlock Text="加载详细内容..." Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <!-- 详细内容 -->
                <Border 
                    x:Name="ContentBorder"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Visibility="Collapsed">
                    <StackPanel Spacing="12">
                        <TextBlock 
                            Text="更新内容"
                            Style="{StaticResource BodyStrongTextBlockStyle}" />
                        <TextBlock 
                            x:Name="ContentTextBlock"
                            Style="{StaticResource BodyTextBlockStyle}"
                            TextWrapping="Wrap"
                            IsTextSelectionEnabled="True" />
                    </StackPanel>
                </Border>

                <!-- 提示 -->
                <TextBlock 
                    Text="完整更新日志请访问 Minecraft 官网"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
