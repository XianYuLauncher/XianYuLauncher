<Page x:Class="XianYuLauncher.Views.ModDownloadDetailPage" x:Name="PageRoot"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:XianYuLauncher.Controls"
      xmlns:ct="using:CommunityToolkit.WinUI.UI.Controls"
      xmlns:viewModels="using:XianYuLauncher.ViewModels"
      xmlns:local="using:XianYuLauncher.Views"
      xmlns:helpers="using:XianYuLauncher.Helpers"
      mc:Ignorable="d"
      NavigationCacheMode="Required">

    <Page.Resources>
        <!-- 按钮样式 -->
        <Style x:Key="TextBlockButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimary}" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 布尔值到可见性转换器 -->
        <helpers:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!-- 字符串空值到可见性转换器 -->
        <helpers:StringNullOrEmptyToBoolConverter x:Key="StringNullOrEmptyToVisibilityConverter" />

        <!-- 布尔值取反转换器 -->
        <helpers:BoolNegationConverter x:Key="BooleanNegationConverter" />

        <!-- 布尔值到图标转换器 -->
        <helpers:BoolToGlyphConverter x:Key="BoolToGlyphConverter" />

        <!-- 布尔值到透明度转换器 -->
        <helpers:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />

        <!-- 首字母大写转换器 -->
        <helpers:FirstLetterToUpperConverter x:Key="FirstLetterToUpperConverter" />
        
        <!-- 版本数量转字符串转换器 -->
        <helpers:VersionCountToStringConverter x:Key="VersionCountToStringConverter" />
    </Page.Resources>

    <Grid>
        <!-- 下载弹窗 -->
        <ContentDialog
            x:Name="DownloadDialog"
            x:Uid="ModDownloadDetailPage_DownloadDialog"
            Title="{x:Bind ViewModel.DownloadDialogTitle}"
            PrimaryButtonText="选择版本"
            SecondaryButtonText="自定义位置"
            CloseButtonText="取消"
            DefaultButton="None"
            IsPrimaryButtonEnabled="True"
            IsSecondaryButtonEnabled="True"
            PrimaryButtonClick="DownloadDialog_PrimaryButtonClick"
            SecondaryButtonClick="DownloadDialog_SecondaryButtonClick"
            CloseButtonClick="DownloadDialog_CloseButtonClick">
            <StackPanel Spacing="16">
                <TextBlock x:Uid="ModDownloadDetailPage_DownloadDialog_InstructionText" Text="请选择下载方式：" FontSize="14" />
                
                <!-- 前置Mod列表 -->
                <StackPanel Visibility="{x:Bind ViewModel.DependencyProjects.Count > 0, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <!-- 加载状态 -->
                    <ProgressRing IsActive="{x:Bind ViewModel.IsLoadingDependencies}" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center" 
                                  Height="32" 
                                  Width="32" 
                                  Margin="0,8" 
                                  Visibility="{x:Bind ViewModel.IsLoadingDependencies, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    
                    <!-- 依赖项卡片列表 -->
                    <ItemsControl ItemsSource="{x:Bind ViewModel.DependencyProjects, Mode=OneWay}" 
                                  Visibility="{x:Bind ViewModel.IsLoadingDependencies, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter='Inverse'}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Spacing="8" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button x:Name="DependencyCardButton" 
                                        Background="{ThemeResource CardBackgroundFillColorDefault}" 
                                        CornerRadius="8" 
                                        Padding="12" 
                                        BorderThickness="1" 
                                        BorderBrush="{ThemeResource CardStrokeColorDefault}"
                                        Width="380"
                                        HorizontalAlignment="Left"
                                        Command="{Binding ElementName=PageRoot, Path=ViewModel.NavigateToDependencyCommand}" 
                                        CommandParameter="{Binding ProjectId}">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center" Width="356">
                                            <!-- 图标 -->
                                            <Border CornerRadius="4" Width="40" Height="40" Background="Transparent">
                                                <Image Source="{Binding IconUrl}" Width="40" Height="40" Stretch="UniformToFill" />
                                            </Border>
                                            
                                            <!-- 文本内容 -->
                                            <StackPanel Orientation="Vertical" Spacing="4" VerticalAlignment="Center" Width="300">
                                                <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" 
                                                           Width="300" HorizontalAlignment="Left" />
                                                <TextBlock Text="{Binding DisplayDescription}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondary}" 
                                                           TextTrimming="CharacterEllipsis" MaxLines="2" 
                                                           Width="300" HorizontalAlignment="Left" 
                                                           TextWrapping="WrapWholeWords" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ContentDialog>

        <!-- 版本选择弹窗 -->
        <ContentDialog
            x:Name="VersionSelectionDialog"
            x:Uid="ModDownloadDetailPage_VersionSelectionDialog"
            Title="选择游戏版本"
            PrimaryButtonText="确认"
            CloseButtonText="取消"
            DefaultButton="Primary"
            PrimaryButtonClick="VersionSelectionDialog_PrimaryButtonClick"
            CloseButtonClick="VersionSelectionDialog_CloseButtonClick">
            <StackPanel Spacing="12">
                <TextBlock x:Uid="ModDownloadDetailPage_VersionSelectionDialog_InstructionText" Text="请选择要安装的游戏版本：" FontSize="14" />
                <ListView
                    ItemsSource="{x:Bind ViewModel.InstalledGameVersions, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedInstalledVersion, Mode=TwoWay}"
                    SelectionMode="Single"
                    MaxHeight="300">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="viewModels:InstalledGameVersionViewModel">
                            <Grid Padding="8">
                                <TextBlock
                                    Text="{x:Bind DisplayName}"
                                    Opacity="{x:Bind IsCompatible, Converter={StaticResource BoolToOpacityConverter}, ConverterParameter='1.0,0.5'}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondary}" Text="{x:Bind ViewModel.VersionSelectionTip, Mode=OneWay}" />
            </StackPanel>
        </ContentDialog>
        
        <!-- 存档选择弹窗 -->
        <ContentDialog
            x:Name="SaveSelectionDialog"
            x:Uid="ModDownloadDetailPage_SaveSelectionDialog"
            Title="选择存档"
            PrimaryButtonText="确认"
            CloseButtonText="取消"
            DefaultButton="Primary"
            PrimaryButtonClick="SaveSelectionDialog_PrimaryButtonClick"
            CloseButtonClick="SaveSelectionDialog_CloseButtonClick">
            <StackPanel Spacing="12">
                <TextBlock x:Uid="ModDownloadDetailPage_SaveSelectionDialog_InstructionText" Text="请选择要安装数据包的存档：" FontSize="14" />
                <ListView
                    ItemsSource="{x:Bind ViewModel.SaveNames, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedSaveName, Mode=TwoWay}"
                    SelectionMode="Single"
                    MaxHeight="300">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8">
                                <TextBlock Text="{Binding}" FontSize="16" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondary}" Text="{x:Bind ViewModel.SaveSelectionTip, Mode=OneWay}" />
            </StackPanel>
        </ContentDialog>

        <!-- 整合包安装进度弹窗 -->
        <ContentDialog
            x:Name="ModpackInstallDialog"
            x:Uid="ModDownloadDetailPage_ModpackInstallDialog"
            Title="整合包安装中"
            CloseButtonText="取消"
            IsPrimaryButtonEnabled="False"
            IsSecondaryButtonEnabled="False"
            DefaultButton="None"
            CloseButtonClick="ModpackInstallDialog_CloseButtonClick">
            <StackPanel Spacing="16" Width="400">
                <!-- 安装状态文本 -->
                <TextBlock FontSize="16" Text="{x:Bind ViewModel.InstallStatus, Mode=OneWay}" TextWrapping="WrapWholeWords" />
                
                <!-- 进度条 -->
                <ProgressBar Value="{x:Bind ViewModel.InstallProgress, Mode=OneWay}" Minimum="0" Maximum="100" Height="8" CornerRadius="4" />
                
                <!-- 进度百分比文本 -->
                <TextBlock FontSize="14" Foreground="{ThemeResource TextFillColorSecondary}" Text="{x:Bind ViewModel.InstallProgressText, Mode=OneWay}" HorizontalTextAlignment="Center" />
            </StackPanel>
        </ContentDialog>
        
        <!-- 下载进度弹窗（用于Mod、光影、资源包、数据包） -->
        <ContentDialog
            x:Name="DownloadProgressDialog"
            x:Uid="ModDownloadDetailPage_DownloadProgressDialog"
            Title="下载中"
            PrimaryButtonText="后台下载"
            IsPrimaryButtonEnabled="True"
            IsSecondaryButtonEnabled="False"
            DefaultButton="None"
            PrimaryButtonClick="DownloadProgressDialog_BackgroundButtonClick">
            <StackPanel Spacing="16" Width="400">
                <!-- 下载状态文本 -->
                <TextBlock FontSize="16" Text="{x:Bind ViewModel.DownloadStatus, Mode=OneWay}" TextWrapping="WrapWholeWords" />
                
                <!-- 进度条 -->
                <ProgressBar Value="{x:Bind ViewModel.DownloadProgress, Mode=OneWay}" Minimum="0" Maximum="100" Height="8" CornerRadius="4" />
                
                <!-- 进度百分比文本（显示小数） -->
                <TextBlock FontSize="14" Foreground="{ThemeResource TextFillColorSecondary}" Text="{x:Bind ViewModel.DownloadProgressText, Mode=OneWay}" HorizontalTextAlignment="Center" />
            </StackPanel>
        </ContentDialog>
        
        <!-- 一键安装 - 游戏版本选择弹窗 -->
        <ContentDialog
            x:Name="QuickInstallGameVersionDialog"
            x:Uid="ModDownloadDetailPage_QuickInstallGameVersionDialog"
            Title="选择游戏版本"
            PrimaryButtonText="下一步"
            CloseButtonText="取消"
            DefaultButton="Primary"
            PrimaryButtonClick="QuickInstallGameVersionDialog_PrimaryButtonClick"
            CloseButtonClick="QuickInstallGameVersionDialog_CloseButtonClick">
            <StackPanel Spacing="12">
                <TextBlock x:Uid="ModDownloadDetailPage_QuickInstallGameVersionDialog_InstructionText" Text="请选择要安装Mod的游戏版本：" FontSize="14" />
                <ListView
                    ItemsSource="{x:Bind ViewModel.QuickInstallGameVersions, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedQuickInstallVersion, Mode=TwoWay}"
                    SelectionMode="Single"
                    MaxHeight="300">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="viewModels:InstalledGameVersionViewModel">
                            <Grid Padding="8">
                                <TextBlock
                                    Text="{x:Bind DisplayName}"
                                    Opacity="{x:Bind IsCompatible, Converter={StaticResource BoolToOpacityConverter}, ConverterParameter='1.0,0.5'}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock x:Uid="ModDownloadDetailPage_QuickInstallGameVersionDialog_Tip" FontSize="12" Foreground="{ThemeResource TextFillColorSecondary}" Text="灰色版本表示当前Mod不支持该版本" />
            </StackPanel>
        </ContentDialog>
        
        <!-- 一键安装 - Mod版本选择弹窗 -->
        <ContentDialog
            x:Name="QuickInstallModVersionDialog"
            x:Uid="ModDownloadDetailPage_QuickInstallModVersionDialog"
            Title="选择Mod版本"
            PrimaryButtonText="安装"
            CloseButtonText="取消"
            DefaultButton="Primary"
            PrimaryButtonClick="QuickInstallModVersionDialog_PrimaryButtonClick"
            CloseButtonClick="QuickInstallModVersionDialog_CloseButtonClick">
            <StackPanel Spacing="12">
                <TextBlock FontSize="14" TextWrapping="WrapWholeWords">
                    <Run Text="请选择要安装到 " />
                    <Run Text="{x:Bind ViewModel.SelectedQuickInstallVersion.DisplayName, Mode=OneWay}" FontWeight="SemiBold" />
                    <Run Text=" 的Mod版本：" />
                </TextBlock>
                <ListView
                    ItemsSource="{x:Bind ViewModel.QuickInstallModVersions, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedQuickInstallModVersion, Mode=TwoWay}"
                    SelectionMode="Single"
                    MaxHeight="400">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="viewModels:ModVersionViewModel">
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6" 
                                    Padding="12"
                                    Margin="0,4">
                                <StackPanel Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{x:Bind VersionNumber}" 
                                                   FontSize="15" 
                                                   FontWeight="SemiBold" />
                                        <Border CornerRadius="4" 
                                                Padding="6,2"
                                                Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                                            <TextBlock Text="{x:Bind VersionType, Converter={StaticResource FirstLetterToUpperConverter}}" 
                                                       FontSize="11" 
                                                       Foreground="{ThemeResource TextFillColorSecondary}" />
                                        </Border>
                                        <!-- 资源类型标签（仅对非Mod资源显示，如光影、资源包、数据包） -->
                                        <Border CornerRadius="4" 
                                                Padding="6,2"
                                                Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                Visibility="{x:Bind ResourceTypeTag, Mode=OneWay, Converter={StaticResource StringNullOrEmptyToBoolConverter}}">
                                            <TextBlock Text="{x:Bind ResourceTypeTag, Mode=OneWay}" 
                                                       FontSize="11" 
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource TextOnAccentFillColorPrimary}" />
                                        </Border>
                                    </StackPanel>
                                    <TextBlock FontSize="12" 
                                               Foreground="{ThemeResource TextFillColorSecondary}">
                                        <Run x:Uid="ModDownloadDetailPage_ReleaseDateText" Text="发布日期: " />
                                        <Run Text="{x:Bind ReleaseDate}" />
                                    </TextBlock>
                                    <TextBlock Text="{x:Bind FileName}" 
                                               FontSize="11" 
                                               Foreground="{ThemeResource TextFillColorTertiary}"
                                               TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ContentDialog>
        
        <!-- 顶部导航栏 -->
        <Grid Padding="0,16,0,0">
            <Button x:Uid="ModDownloadDetailPage_BackButton"
                    Content="&lt; 返回" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="16,0,0,0" 
                    Click="BackButton_Click" 
                    Style="{StaticResource TextBlockButtonStyle}" />
        </Grid>
        
        <ScrollViewer HorizontalScrollMode="Disabled" VerticalScrollMode="Enabled" Margin="0,48,0,0">
            <StackPanel Spacing="16" Padding="16">
                
                <!-- Mod基本信息 -->
                <StackPanel Spacing="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- 左侧：图标和信息 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Top" Margin="0,4,0,0">
                            <Border CornerRadius="8" Clip="{Binding ElementName=ImageBorder, Path=CornerRadius}">
                                <Image x:Name="ImageBorder" Source="{x:Bind ViewModel.ModIconUrl, Mode=OneWay}" Width="80" Height="80" Stretch="UniformToFill" />
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind ViewModel.ModName, Mode=OneWay}" FontSize="24" FontWeight="Bold" />
                                <TextBlock Text="{x:Bind ViewModel.ModAuthor, Mode=OneWay}" FontSize="16" Foreground="{ThemeResource TextFillColorSecondary}" />
                                <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,4,0,0">
                                    <TextBlock FontSize="14" Foreground="{ThemeResource TextFillColorSecondary}">
                                        <Run x:Uid="ModDownloadDetailPage_LicenseText" Text="许可证: " />
                                        <Run Text="{x:Bind ViewModel.ModLicense, Mode=OneWay}" />
                                    </TextBlock>
                                    <TextBlock Text="|" FontSize="14" Foreground="{ThemeResource TextFillColorTertiary}" />
                                    <TextBlock FontSize="14" Foreground="{ThemeResource TextFillColorSecondary}">
                                        <Run x:Uid="ModDownloadDetailPage_DownloadsText" Text="下载量: " />
                                        <Run Text="{x:Bind ViewModel.ModDownloads, Mode=OneWay}" />
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- 右侧：安装按钮 -->
                        <Button Grid.Column="1" 
                                Command="{x:Bind ViewModel.QuickInstallCommand}"
                                Visibility="{x:Bind ViewModel.IsQuickInstallButtonVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                                CornerRadius="8"
                                Height="44"
                                Padding="16,10"
                                FontSize="14"
                                FontWeight="SemiBold"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="0,0,16,0"
                                MinWidth="120">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE896;" FontSize="16" />
                                <TextBlock x:Uid="ModDownloadDetailPage_QuickInstallButton" Text="安装" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>

                <!-- Mod描述 -->
        <StackPanel Spacing="8">
            <TextBlock x:Uid="ModDownloadDetailPage_DescriptionTitle" Text="描述" FontSize="18" FontWeight="Bold" />
                      
                      <!-- 简短描述 (默认显示) -->
                      <TextBlock Text="{x:Bind ViewModel.DisplayModDescription, Mode=OneWay}" 
                                 FontSize="14" 
                                 TextWrapping="WrapWholeWords"
                                 Visibility="{x:Bind ViewModel.IsFullDescriptionVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}" />
                      
                      <!-- 查看更多链接 -->
                      <HyperlinkButton Content="查看完整描述" 
                                       Command="{x:Bind ViewModel.ToggleFullDescriptionCommand}" 
                                       HorizontalAlignment="Left"
                                       Padding="0"
                                       Visibility="{x:Bind ViewModel.IsFullDescriptionVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}" />

                      <!-- 完整描述 (点击展开) -->
                      <StackPanel Visibility="{x:Bind ViewModel.IsFullDescriptionVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                          <ct:MarkdownTextBlock Text="{x:Bind ViewModel.ModDescriptionBody, Mode=OneWay}" 
                                                Background="Transparent" 
                                                TextWrapping="Wrap" 
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"/>
                          
                          <HyperlinkButton Content="收起描述" 
                                           Command="{x:Bind ViewModel.ToggleFullDescriptionCommand}" 
                                           HorizontalAlignment="Left" 
                                           Padding="0"
                                           Margin="0,8,0,0" />
                      </StackPanel>
                  </StackPanel>
                  
                <StackPanel Spacing="8">
                    <TextBlock Text="{x:Bind ViewModel.SupportedLoadersText, Mode=OneWay}" FontSize="18" FontWeight="Bold" />
                    <!-- 使用ScrollViewer + StackPanel替代WrapGrid，确保所有标签完整显示 -->
                    <ScrollViewer HorizontalScrollMode="Auto" VerticalScrollMode="Disabled" HorizontalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{x:Bind ViewModel.SupportedLoaders, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            Padding="12,6" 
                                            Margin="0,0,8,0" 
                                            CornerRadius="6">
                                        <TextBlock Text="{Binding}" FontSize="14" VerticalAlignment="Center" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- 功能栏 -->
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                        <!-- 跳转到平台按钮 -->
                        <Button Command="{x:Bind ViewModel.OpenPlatformUrlCommand}"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8A7;" FontSize="16" />
                                <TextBlock Text="{x:Bind ViewModel.PlatformName, Mode=OneWay}" FontSize="14" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        
                        <!-- MC百科按钮 -->
                        <Button Command="{x:Bind ViewModel.OpenMcmodCommand}"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8F1;" FontSize="16" />
                                <TextBlock x:Uid="ModDownloadDetailPage_McmodButton" Text="MC百科" FontSize="14" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- 游戏版本和资源包/Mod版本下载列表 -->
                <StackPanel Spacing="12">
                    <TextBlock Text="{x:Bind ViewModel.DownloadSectionText, Mode=OneWay}" FontSize="18" FontWeight="Bold" />
                    
                    <!-- 加载状态指示器 -->
                    <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                                  Visibility="{x:Bind ViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center" 
                                  Height="32" 
                                  Width="32" 
                                  Margin="0,8" />
                    
                    <!-- 游戏版本列表 - 使用 ListView 虚拟化 -->
                    <ListView ItemsSource="{x:Bind ViewModel.SupportedGameVersions, Mode=OneWay}"
                              SelectionMode="None"
                              IsItemClickEnabled="False"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0,0,0,4" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="viewModels:GameVersionViewModel">
                                <!-- 游戏版本 Expander -->
                                <Expander HorizontalAlignment="Stretch" 
                                          HorizontalContentAlignment="Stretch"
                                          IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}"
                                          Padding="0">
                                    <Expander.Header>
                                        <Grid Padding="4,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" 
                                                       Text="{x:Bind GameVersion}" 
                                                       FontSize="14" 
                                                       FontWeight="Medium" 
                                                       VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="1" 
                                                       Text="{x:Bind TotalModVersionsCount, Mode=OneWay, Converter={StaticResource VersionCountToStringConverter}}"
                                                       FontSize="13" 
                                                       Foreground="{ThemeResource TextFillColorSecondary}"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,0,0" />
                                        </Grid>
                                    </Expander.Header>
                                    <Expander.Content>
                                        <!-- 加载器列表 -->
                                        <StackPanel Spacing="8" Margin="0,8,0,0">
                                            <ItemsControl ItemsSource="{x:Bind Loaders}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="viewModels:LoaderViewModel">
                                                        <!-- 加载器 Expander -->
                                                        <Expander HorizontalAlignment="Stretch" 
                                                                  HorizontalContentAlignment="Stretch"
                                                                  IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}"
                                                                  Margin="0,0,0,4"
                                                                  Padding="0">
                                                            <Expander.Header>
                                                                <Grid Padding="4,6">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <FontIcon Grid.Column="0" 
                                                                              Glyph="&#xE74C;" 
                                                                              FontSize="14" 
                                                                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                                                              VerticalAlignment="Center"
                                                                              Margin="0,0,8,0" />
                                                                    <TextBlock Grid.Column="1" 
                                                                               Text="{x:Bind LoaderName}" 
                                                                               FontSize="14" 
                                                                               FontWeight="Medium" 
                                                                               VerticalAlignment="Center" />
                                                                    <TextBlock Grid.Column="2" 
                                                                               Text="{x:Bind ModVersions.Count, Mode=OneWay, Converter={StaticResource VersionCountToStringConverter}}"
                                                                               FontSize="13" 
                                                                               Foreground="{ThemeResource TextFillColorSecondary}"
                                                                               VerticalAlignment="Center"
                                                                               Margin="8,0,0,0" />
                                                                </Grid>
                                                            </Expander.Header>
                                                            <Expander.Content>
                                                                <!-- Mod 版本列表 -->
                                                                <ListView ItemsSource="{x:Bind ModVersions}"
                                                                          SelectionMode="None"
                                                                          IsItemClickEnabled="False"
                                                                          Margin="0,4,0,0">
                                                                    <ListView.ItemContainerStyle>
                                                                        <Style TargetType="ListViewItem">
                                                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                                            <Setter Property="Padding" Value="0" />
                                                                            <Setter Property="Margin" Value="0,0,0,6" />
                                                                        </Style>
                                                                    </ListView.ItemContainerStyle>
                                                                    <ListView.ItemTemplate>
                                                                        <DataTemplate x:DataType="viewModels:ModVersionViewModel">
                                                                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                                                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                                                    BorderThickness="1"
                                                                                    CornerRadius="6" 
                                                                                    Padding="12">
                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="*" />
                                                                                        <ColumnDefinition Width="Auto" />
                                                                                    </Grid.ColumnDefinitions>
                                                                                    <Grid.RowDefinitions>
                                                                                        <RowDefinition Height="Auto" />
                                                                                        <RowDefinition Height="Auto" />
                                                                                        <RowDefinition Height="Auto" />
                                                                                    </Grid.RowDefinitions>
                                                                                    
                                                                                    <!-- 版本号和类型标签 -->
                                                                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                                                                        <TextBlock Text="{x:Bind VersionNumber}" 
                                                                                                   FontSize="15" 
                                                                                                   FontWeight="SemiBold" 
                                                                                                   VerticalAlignment="Center" />
                                                                                        <Border CornerRadius="4" 
                                                                                                Padding="6,2"
                                                                                                Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                                                                                            <TextBlock Text="{x:Bind VersionType, Converter={StaticResource FirstLetterToUpperConverter}}" 
                                                                                                       FontSize="11" 
                                                                                                       Foreground="{ThemeResource TextFillColorSecondary}" />
                                                                                        </Border>
                                                                                    </StackPanel>
                                                                                    
                                                                                    <!-- 下载按钮 -->
                                                                                    <Button Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
                                                                                            x:Uid="ModDownloadDetailPage_DownloadButton"
                                                                                            Content="下载"
                                                                                            VerticalAlignment="Center"
                                                                                            Padding="16,6"
                                                                                            Command="{Binding ElementName=PageRoot, Path=ViewModel.OpenDownloadDialogCommand}" 
                                                                                            CommandParameter="{x:Bind}" />
                                                                                    
                                                                                    <!-- 发布日期 -->
                                                                                    <TextBlock Grid.Row="1" Grid.Column="0" 
                                                                                               FontSize="12" 
                                                                                               Foreground="{ThemeResource TextFillColorSecondary}"
                                                                                               Margin="0,4,0,0">
                                                                                        <Run x:Uid="ModDownloadDetailPage_ReleaseDateText" Text="发布日期: " />
                                                                                        <Run Text="{x:Bind ReleaseDate}" />
                                                                                    </TextBlock>
                                                                                    
                                                                                    <!-- 文件名 -->
                                                                                    <TextBlock Grid.Row="2" Grid.Column="0" 
                                                                                               Text="{x:Bind FileName}" 
                                                                                               FontSize="11" 
                                                                                               Foreground="{ThemeResource TextFillColorTertiary}"
                                                                                               TextTrimming="CharacterEllipsis"
                                                                                               Margin="0,2,12,0" />
                                                                                </Grid>
                                                                            </Border>
                                                                        </DataTemplate>
                                                                    </ListView.ItemTemplate>
                                                                </ListView>
                                                            </Expander.Content>
                                                        </Expander>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Spacing="0" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Expander.Content>
                                </Expander>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>