<Page x:Class="XianYuLauncher.Views.ModDownloadDetailPage" x:Name="PageRoot"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:XianYuLauncher.Controls"
      xmlns:ct="using:CommunityToolkit.WinUI.UI.Controls"
      xmlns:viewModels="using:XianYuLauncher.ViewModels"
      xmlns:local="using:XianYuLauncher.Views"
      xmlns:helpers="using:XianYuLauncher.Helpers"
      xmlns:animations="using:CommunityToolkit.WinUI.Animations"
      mc:Ignorable="d"
      NavigationCacheMode="Required">

    <Page.Resources>
        <!-- 按钮样式 -->
        <Style x:Key="TextBlockButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimary}" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 布尔值到可见性转换器 -->
        <helpers:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!-- 字符串空值到可见性转换器 -->
        <helpers:StringNullOrEmptyToBoolConverter x:Key="StringNullOrEmptyToVisibilityConverter" />

        <!-- 布尔值取反转换器 -->
        <helpers:BoolNegationConverter x:Key="BooleanNegationConverter" />

        <!-- 布尔值到图标转换器 -->
        <helpers:BoolToGlyphConverter x:Key="BoolToGlyphConverter" />

        <!-- 布尔值到透明度转换器 -->
        <helpers:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />

        <!-- 首字母大写转换器 -->
        <helpers:FirstLetterToUpperConverter x:Key="FirstLetterToUpperConverter" />
        
        <!-- 版本数量转字符串转换器 -->
        <helpers:VersionCountToStringConverter x:Key="VersionCountToStringConverter" />
    </Page.Resources>

    <Grid>
        <!-- 顶部导航栏 -->
        <Grid Padding="0,16,0,0">
            <Button x:Uid="ModDownloadDetailPage_BackButton"
                    Content="&lt; 返回" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="16,0,0,0" 
                    Click="BackButton_Click" 
                    Style="{StaticResource TextBlockButtonStyle}" />
        </Grid>
        
        <ScrollViewer HorizontalScrollMode="Disabled" VerticalScrollMode="Enabled" Margin="0,48,0,0">
            <StackPanel Spacing="16" Padding="16">
                <StackPanel.ChildrenTransitions>
                    <RepositionThemeTransition IsStaggeringEnabled="False" />
                </StackPanel.ChildrenTransitions>
                
                <!-- Mod基本信息 -->
                <StackPanel Spacing="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- 左侧：图标和信息 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Top" Margin="0,4,0,0">
                            <Border CornerRadius="8" Clip="{Binding ElementName=ImageBorder, Path=CornerRadius}">
                                <Image x:Name="ImageBorder" Source="{x:Bind ViewModel.ModIconUrl, Mode=OneWay}" Width="80" Height="80" Stretch="UniformToFill" />
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind ViewModel.ModName, Mode=OneWay}" FontSize="24" FontWeight="Bold" />
                                <Button Command="{x:Bind ViewModel.ShowPublishersCommand}" 
                                        Style="{StaticResource TextBlockButtonStyle}"
                                        Margin="0,4,0,0"
                                        PointerEntered="AuthorButton_PointerEntered"
                                        PointerExited="AuthorButton_PointerExited">
                                    <TextBlock x:Name="AuthorTextBlock" 
                                               Text="{x:Bind ViewModel.ModAuthor, Mode=OneWay}" 
                                               FontSize="16" 
                                               Foreground="{ThemeResource TextFillColorSecondary}" />
                                </Button>
                                <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,4,0,0">
                                    <TextBlock FontSize="14" Foreground="{ThemeResource TextFillColorSecondary}">
                                        <Run x:Uid="ModDownloadDetailPage_LicenseText" Text="许可证: " />
                                        <Run Text="{x:Bind ViewModel.ModLicense, Mode=OneWay}" />
                                    </TextBlock>
                                    <TextBlock Text="|" FontSize="14" Foreground="{ThemeResource TextFillColorTertiary}" />
                                    <TextBlock FontSize="14" Foreground="{ThemeResource TextFillColorSecondary}">
                                        <Run x:Uid="ModDownloadDetailPage_DownloadsText" Text="下载量: " />
                                        <Run Text="{x:Bind ViewModel.ModDownloads, Mode=OneWay}" />
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- 右侧：安装按钮 -->
                        <Button Grid.Column="1" 
                                Command="{x:Bind ViewModel.QuickInstallCommand}"
                                Visibility="{x:Bind ViewModel.IsQuickInstallButtonVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                                CornerRadius="8"
                                Height="44"
                                Padding="16,10"
                                FontSize="14"
                                FontWeight="SemiBold"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="0,0,16,0"
                                MinWidth="120">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE896;" FontSize="16" />
                                <TextBlock x:Uid="ModDownloadDetailPage_QuickInstallButton" Text="安装" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>

                <!-- Mod描述 -->
                <StackPanel Spacing="8">
                    <TextBlock x:Uid="ModDownloadDetailPage_DescriptionTitle" Text="描述" FontSize="18" FontWeight="Bold" />
                      
                    <!-- 简短描述 (始终显示) -->
                    <TextBlock Text="{x:Bind ViewModel.DisplayModDescription, Mode=OneWay}" 
                               FontSize="14" 
                               TextWrapping="WrapWholeWords" />
                      
                    <!-- 展开/收起按钮 -->
                    <HyperlinkButton x:Name="ToggleDescriptionButton"
                                     HorizontalAlignment="Left"
                                     Padding="0"
                                     Click="ToggleDescriptionButton_Click">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <FontIcon x:Name="ToggleDescriptionIcon" 
                                      Glyph="&#xE70D;" 
                                      FontSize="12" 
                                      VerticalAlignment="Center"
                                      RenderTransformOrigin="0.5,0.5">
                                <FontIcon.RenderTransform>
                                    <RotateTransform Angle="0" />
                                </FontIcon.RenderTransform>
                            </FontIcon>
                            <TextBlock x:Name="ToggleDescriptionText" 
                                       x:Uid="ModDownloadDetailPage_ViewFullDescription"
                                       Text="查看完整描述" 
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </HyperlinkButton>

                    <!-- 完整描述容器 (Composition 动画) -->
                    <StackPanel x:Name="FullDescriptionContainer" 
                                Visibility="Collapsed"
                                HorizontalAlignment="Stretch">
                        <animations:Implicit.ShowAnimations>
                            <animations:TranslationAnimation Duration="0:0:0.35" From="0, -20, 0" To="0" EasingMode="EaseOut" EasingType="Circle" />
                            <animations:OpacityAnimation Duration="0:0:0.25" From="0" To="1.0" EasingMode="EaseOut" EasingType="Circle" />
                        </animations:Implicit.ShowAnimations>
                        <animations:Implicit.HideAnimations>
                            <animations:TranslationAnimation Duration="0:0:0.2" From="0" To="0, -10, 0" EasingMode="EaseOut" EasingType="Circle" />
                            <animations:OpacityAnimation Duration="0:0:0.15" From="1.0" To="0" EasingMode="EaseOut" EasingType="Circle" />
                        </animations:Implicit.HideAnimations>
                        <ct:MarkdownTextBlock Text="{x:Bind ViewModel.ModDescriptionBody, Mode=OneWay}" 
                                              Background="Transparent" 
                                              TextWrapping="Wrap" 
                                              FontSize="14"
                                              IsTextSelectionEnabled="True"/>
                    </StackPanel>
                </StackPanel>
                  
                <StackPanel Spacing="8">
                    <TextBlock Text="{x:Bind ViewModel.SupportedLoadersText, Mode=OneWay}" FontSize="18" FontWeight="Bold" />
                    <!-- 使用ScrollViewer + StackPanel替代WrapGrid，确保所有标签完整显示 -->
                    <ScrollViewer HorizontalScrollMode="Auto" VerticalScrollMode="Disabled" HorizontalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{x:Bind ViewModel.SupportedLoaders, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            Padding="12,6" 
                                            Margin="0,0,8,0" 
                                            CornerRadius="6">
                                        <TextBlock Text="{Binding}" FontSize="14" VerticalAlignment="Center" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- 功能栏 -->
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                        <!-- 跳转到平台按钮 -->
                        <Button Command="{x:Bind ViewModel.OpenPlatformUrlCommand}"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8A7;" FontSize="16" />
                                <TextBlock Text="{x:Bind ViewModel.PlatformName, Mode=OneWay}" FontSize="14" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        
                        <!-- MC百科按钮 -->
                        <Button Command="{x:Bind ViewModel.OpenMcmodCommand}"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8F1;" FontSize="16" />
                                <TextBlock x:Uid="ModDownloadDetailPage_McmodButton" Text="MC百科" FontSize="14" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- 游戏版本和资源包/Mod版本下载列表 -->
                <StackPanel Spacing="12">
                    <TextBlock Text="{x:Bind ViewModel.DownloadSectionText, Mode=OneWay}" FontSize="18" FontWeight="Bold" />
                    
                    <!-- 加载状态指示器 -->
                    <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                                  Visibility="{x:Bind ViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center" 
                                  Height="32" 
                                  Width="32" 
                                  Margin="0,8" />
                    
                    <!-- 游戏版本列表 - 使用 ListView 虚拟化 -->
                    <ListView ItemsSource="{x:Bind ViewModel.SupportedGameVersions, Mode=OneWay}"
                              SelectionMode="None"
                              IsItemClickEnabled="False"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0,0,0,4" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="viewModels:GameVersionViewModel">
                                <!-- 游戏版本 Expander -->
                                <Expander HorizontalAlignment="Stretch" 
                                          HorizontalContentAlignment="Stretch"
                                          IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}"
                                          Padding="0">
                                    <Expander.Header>
                                        <Grid Padding="4,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" 
                                                       Text="{x:Bind GameVersion}" 
                                                       FontSize="14" 
                                                       FontWeight="Medium" 
                                                       VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="1" 
                                                       Text="{x:Bind TotalModVersionsCount, Mode=OneWay, Converter={StaticResource VersionCountToStringConverter}}"
                                                       FontSize="13" 
                                                       Foreground="{ThemeResource TextFillColorSecondary}"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,0,0" />
                                        </Grid>
                                    </Expander.Header>
                                    <Expander.Content>
                                        <!-- 加载器列表 -->
                                        <StackPanel Spacing="8" Margin="0,8,0,0">
                                            <ItemsControl ItemsSource="{x:Bind Loaders}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="viewModels:LoaderViewModel">
                                                        <!-- 加载器 Expander -->
                                                        <Expander HorizontalAlignment="Stretch" 
                                                                  HorizontalContentAlignment="Stretch"
                                                                  IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}"
                                                                  Margin="0,0,0,4"
                                                                  Padding="0">
                                                            <Expander.Header>
                                                                <Grid Padding="4,6">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <FontIcon Grid.Column="0" 
                                                                              Glyph="&#xE74C;" 
                                                                              FontSize="14" 
                                                                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                                                              VerticalAlignment="Center"
                                                                              Margin="0,0,8,0" />
                                                                    <TextBlock Grid.Column="1" 
                                                                               Text="{x:Bind LoaderName}" 
                                                                               FontSize="14" 
                                                                               FontWeight="Medium" 
                                                                               VerticalAlignment="Center" />
                                                                    <TextBlock Grid.Column="2" 
                                                                               Text="{x:Bind ModVersions.Count, Mode=OneWay, Converter={StaticResource VersionCountToStringConverter}}"
                                                                               FontSize="13" 
                                                                               Foreground="{ThemeResource TextFillColorSecondary}"
                                                                               VerticalAlignment="Center"
                                                                               Margin="8,0,0,0" />
                                                                </Grid>
                                                            </Expander.Header>
                                                            <Expander.Content>
                                                                <!-- Mod 版本列表 -->
                                                                <ListView ItemsSource="{x:Bind ModVersions}"
                                                                          SelectionMode="None"
                                                                          IsItemClickEnabled="False"
                                                                          Margin="0,4,0,0">
                                                                    <ListView.ItemContainerStyle>
                                                                        <Style TargetType="ListViewItem">
                                                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                                            <Setter Property="Padding" Value="0" />
                                                                            <Setter Property="Margin" Value="0,0,0,6" />
                                                                        </Style>
                                                                    </ListView.ItemContainerStyle>
                                                                    <ListView.ItemTemplate>
                                                                        <DataTemplate x:DataType="viewModels:ModVersionViewModel">
                                                                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                                                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                                                    BorderThickness="1"
                                                                                    CornerRadius="6" 
                                                                                    Padding="12">
                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="*" />
                                                                                        <ColumnDefinition Width="Auto" />
                                                                                    </Grid.ColumnDefinitions>
                                                                                    <Grid.RowDefinitions>
                                                                                        <RowDefinition Height="Auto" />
                                                                                        <RowDefinition Height="Auto" />
                                                                                        <RowDefinition Height="Auto" />
                                                                                    </Grid.RowDefinitions>
                                                                                    
                                                                                    <!-- 版本号和类型标签 -->
                                                                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                                                                        <TextBlock Text="{x:Bind VersionNumber}" 
                                                                                                   FontSize="15" 
                                                                                                   FontWeight="SemiBold" 
                                                                                                   VerticalAlignment="Center" />
                                                                                        <Border CornerRadius="4" 
                                                                                                Padding="6,2"
                                                                                                Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                                                                                            <TextBlock Text="{x:Bind VersionType, Converter={StaticResource FirstLetterToUpperConverter}}" 
                                                                                                       FontSize="11" 
                                                                                                       Foreground="{ThemeResource TextFillColorSecondary}" />
                                                                                        </Border>
                                                                                    </StackPanel>
                                                                                    
                                                                                    <!-- 下载按钮 -->
                                                                                    <Button Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
                                                                                            x:Uid="ModDownloadDetailPage_DownloadButton"
                                                                                            Content="下载"
                                                                                            VerticalAlignment="Center"
                                                                                            Padding="16,6"
                                                                                            Command="{Binding ElementName=PageRoot, Path=ViewModel.OpenDownloadDialogCommand}" 
                                                                                            CommandParameter="{x:Bind}" />
                                                                                    
                                                                                    <!-- 发布日期 -->
                                                                                    <TextBlock Grid.Row="1" Grid.Column="0" 
                                                                                               FontSize="12" 
                                                                                               Foreground="{ThemeResource TextFillColorSecondary}"
                                                                                               Margin="0,4,0,0">
                                                                                        <Run x:Uid="ModDownloadDetailPage_ReleaseDateText" Text="发布日期: " />
                                                                                        <Run Text="{x:Bind ReleaseDate}" />
                                                                                    </TextBlock>
                                                                                    
                                                                                    <!-- 文件名 -->
                                                                                    <TextBlock Grid.Row="2" Grid.Column="0" 
                                                                                               Text="{x:Bind FileName}" 
                                                                                               FontSize="11" 
                                                                                               Foreground="{ThemeResource TextFillColorTertiary}"
                                                                                               TextTrimming="CharacterEllipsis"
                                                                                               Margin="0,2,12,0" />
                                                                                </Grid>
                                                                            </Border>
                                                                        </DataTemplate>
                                                                    </ListView.ItemTemplate>
                                                                </ListView>
                                                            </Expander.Content>
                                                        </Expander>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Spacing="0" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Expander.Content>
                                </Expander>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>