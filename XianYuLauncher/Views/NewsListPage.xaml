<Page
    x:Class="XianYuLauncher.Views.NewsListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:services="using:XianYuLauncher.Services"
    mc:Ignorable="d">

    <Grid Padding="40,36,40,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <Button 
                Grid.Column="0"
                Style="{StaticResource SubtleButtonStyle}"
                Click="BackButton_Click"
                Padding="8"
                CornerRadius="4"
                Margin="0,0,12,0"
                VerticalAlignment="Center">
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE72B;" FontSize="16" />
            </Button>
            
            <StackPanel Grid.Column="1" Spacing="4" VerticalAlignment="Center">
                <TextBlock 
                    x:Uid="NewsListPage_Title"
                    Text="新闻与公告" 
                    Style="{StaticResource TitleTextBlockStyle}" 
                    FontWeight="SemiBold" />
                <TextBlock 
                    x:Uid="NewsListPage_Subtitle"
                    Text="Minecraft Java 版更新动态" 
                    Style="{StaticResource CaptionTextBlockStyle}" 
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>
            
            <Button 
                Grid.Column="2"
                x:Name="RefreshButton"
                x:Uid="NewsListPage_RefreshButton"
                Click="RefreshButton_Click"
                Style="{StaticResource SubtleButtonStyle}"
                Padding="8"
                CornerRadius="4"
                ToolTipService.ToolTip="刷新">
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE72C;" FontSize="14" />
            </Button>
        </Grid>

        <!-- 筛选栏 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
            <ComboBox 
                x:Name="FilterComboBox"
                SelectionChanged="FilterComboBox_SelectionChanged"
                Width="120">
                <ComboBoxItem x:Uid="NewsListPage_FilterAll" Content="全部" Tag="All" IsSelected="True" />
                <ComboBoxItem x:Uid="NewsListPage_FilterRelease" Content="正式版" Tag="Release" />
                <ComboBoxItem x:Uid="NewsListPage_FilterSnapshot" Content="快照" Tag="Snapshot" />
            </ComboBox>
        </StackPanel>

        <!-- 加载中 -->
        <StackPanel 
            x:Name="LoadingPanel"
            Grid.Row="2" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Visibility="Visible">
            <ProgressRing IsActive="True" Width="32" Height="32" />
            <TextBlock x:Uid="NewsListPage_Loading" Text="加载中..." Margin="0,12,0,0" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- 错误信息 -->
        <TextBlock 
            x:Name="ErrorTextBlock"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            Visibility="Collapsed" />

        <!-- 新闻列表 -->
        <ListView 
            x:Name="NewsListView"
            Grid.Row="2"
            SelectionMode="None"
            IsItemClickEnabled="True"
            ItemClick="NewsItem_Click"
            Visibility="Collapsed">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="services:MinecraftNewsEntry">
                    <Grid Padding="0,12" ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- 类型标识 -->
                        <Border 
                            Grid.Column="0"
                            Width="4"
                            CornerRadius="2"
                            VerticalAlignment="Stretch"
                            Background="{ThemeResource AccentFillColorDefaultBrush}" />
                        
                        <!-- 内容 -->
                        <StackPanel Grid.Column="1" Spacing="4" VerticalAlignment="Center">
                            <TextBlock 
                                Text="{x:Bind Title}"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                TextTrimming="CharacterEllipsis"
                                MaxLines="1" />
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border 
                                    Background="{ThemeResource ControlFillColorSecondaryBrush}"
                                    CornerRadius="4"
                                    Padding="6,2">
                                    <TextBlock 
                                        Text="{x:Bind Version}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </Border>
                                <TextBlock 
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorTertiaryBrush}">
                                    <Run Text="{x:Bind Date, Converter={StaticResource DateTimeToStringConverter}}" />
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- 箭头 -->
                        <FontIcon 
                            Grid.Column="2"
                            FontFamily="{StaticResource SymbolThemeFontFamily}" 
                            Glyph="&#xE76C;" 
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                            VerticalAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem" BasedOn="{StaticResource DefaultListViewItemStyle}">
                    <Setter Property="Padding" Value="12,0" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Page>
