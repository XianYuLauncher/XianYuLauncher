<Page
    x:Class="XianYuLauncher.Views.VersionListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:XianYuLauncher.Helpers"
    xmlns:vm="using:XianYuLauncher.ViewModels"
    xmlns:local="using:XianYuLauncher.Views"
    mc:Ignorable="d">
    <Page.Resources>
        <!-- 简化的CheckBox样式，精确控制点击区域 -->
        <Style x:Key="CustomCheckboxStyle" TargetType="CheckBox">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0,0,8,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        
        <!-- 将IsDirectory属性转换为对应的FontIcon Glyph的转换器 -->
        <helpers:IsDirectoryToGlyphConverter x:Key="IsDirectoryToGlyphConverter" />
        <!-- 将布尔值转换为对应的展开/折叠图标的转换器 -->
        <local:BoolToGlyphConverter x:Key="BoolToGlyphConverter" />
        <!-- 布尔值到可见性的转换器 -->
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <!-- 布尔值取反转换器 -->
        <local:BoolNegationConverter x:Key="BoolNegationConverter" />
        
        <!-- 递归资源项模板，支持任意深度 -->
        <DataTemplate x:Key="ResourceItemTemplate" x:DataType="vm:VersionListViewModel+ResourceItem">
            <StackPanel>
                <!-- 项内容 -->
                <Grid Width="Auto" Padding="2" HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- 展开/折叠按钮 -->
                    <Button 
                        Grid.Column="0" 
                        Content="{Binding IsExpanded, Converter={StaticResource BoolToGlyphConverter}, ConverterParameter='▼,▶'}" 
                        Width="24" 
                        Height="24" 
                        Padding="0" 
                        Click="ItemExpandButton_Click" 
                        CommandParameter="{Binding}" 
                        Visibility="{Binding IsDirectory, Converter={StaticResource BoolToVisibilityConverter}}" 
                        VerticalContentAlignment="Center" 
                        HorizontalContentAlignment="Center" 
                        Margin="0,0,8,0" /> 
                    <!-- 空白占位符（用于非目录项） -->
                    <TextBlock 
                        Grid.Column="0" 
                        Width="24" 
                        Visibility="{Binding IsDirectory, Converter={StaticResource BoolNegationConverter}}" 
                        Margin="0,0,8,0" /> 
                    <!-- 复选框容器，限制点击区域 -->
                    <Grid Grid.Column="1" Width="20" Height="20" Background="Transparent" Margin="0,0,8,0">
                        <!-- 复选框 -->
                        <CheckBox 
                            IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                            Checked="ResourceItem_Checked" 
                            Unchecked="ResourceItem_Unchecked" 
                            Width="20" 
                            Height="20" 
                            Padding="0" 
                            Margin="0" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" /> 
                    </Grid>
                    <!-- 文件/目录图标 -->
                    <FontIcon 
                        Grid.Column="2" 
                        Glyph="{Binding IsDirectory, Converter={StaticResource IsDirectoryToGlyphConverter}}" 
                        VerticalAlignment="Center" 
                        Margin="0,0,8,0" 
                        FontSize="16" /> 
                    <!-- 名称 -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Name}" />
                        <!-- 中文翻译，只在有翻译时显示 -->
                        <StackPanel Orientation="Horizontal" Margin="4,0,0,0" Visibility="{Binding HasTranslation, Converter={StaticResource BoolToVisibilityConverter}}" VerticalAlignment="Center">
                            <TextBlock Text="(" FontSize="12" Opacity="0.6" /> 
                            <TextBlock Text="{Binding DisplayTranslation}" FontSize="12" Opacity="0.6" /> 
                            <TextBlock Text=")" FontSize="12" Opacity="0.6" /> 
                        </StackPanel> 
                    </StackPanel> 
                </Grid>
                <!-- 递归子项列表，支持任意深度 -->
                <ItemsControl 
                    ItemsSource="{Binding Children}" 
                    Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}" 
                    Margin="24,0,0,0">
                    <!-- 绑定到自身模板，实现真正的递归 -->
                    <ItemsControl.ItemTemplate>
                        <StaticResource ResourceKey="ResourceItemTemplate" />
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="ContentArea" Padding="40,60,40,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32">
            <TextBlock x:Uid="VersionListPage_Title" Style="{StaticResource PageTitleStyle}" FontSize="36" FontWeight="Bold" />
            <TextBlock x:Uid="VersionListPage_Subtitle" Style="{StaticResource BodyTextStyle}" Margin="0,8,0,0" Opacity="0.7" />
        </StackPanel>

        <!-- 控制区域 -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <!-- 状态信息 -->
            <TextBlock 
                Text="{Binding StatusMessage, Mode=OneWay}" 
                Style="{StaticResource BodyTextStyle}" 
                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                VerticalAlignment="Center" />
            
            <!-- 导入整合包按钮 -->
            <Button 
                Grid.Column="1"
                x:Uid="VersionListPage_ImportModpackButton"
                Content="导入整合包"
                Command="{Binding ImportModpackCommand}"
                IsEnabled="{Binding IsLoading, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                Style="{StaticResource DefaultButtonStyle}"
                HorizontalAlignment="Right"
                Margin="0,0,8,0" />            
            
            <!-- 刷新按钮 -->
            <Button 
                Grid.Column="2"
                x:Uid="VersionListPage_RefreshButton"
                Command="{Binding LoadVersionsCommand}"
                IsEnabled="{Binding IsLoading, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                Style="{StaticResource DefaultButtonStyle}"
                HorizontalAlignment="Right" />
        </Grid>

        <!-- 版本列表 -->
        <Grid Grid.Row="2">
            <!-- Error Message -->
            <Grid
                Margin="0,10,0,10"
                Background="#FFFDE7E9"
                BorderBrush="#FFD53939"
                BorderThickness="1"
                CornerRadius="12"
                Padding="16"
                Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <FontIcon
                    Grid.Column="0"
                    Glyph="&#xE7BA;"
                    FontSize="24"
                    VerticalAlignment="Center"
                    Margin="0,0,12,0"
                    Foreground="#FFD53939"/>
                <TextBlock
                    Grid.Column="1"
                    Text="错误信息"
                    Foreground="#FFD53939"
                    Style="{StaticResource BodyTextStyle}"
                    VerticalAlignment="Center"/>
            </Grid>

            <!-- Loading Indicator -->
            <ProgressRing
                Margin="0"
                IsActive="{Binding IsLoading, Mode=OneWay}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Visibility="{Binding IsLoading, Mode=OneWay}"
                Width="48"
                Height="48"
                Foreground="{ThemeResource SystemControlHighlightAccentBrush}"/>

            <!-- Version List Section -->
            <ScrollViewer
                x:Name="ModListScrollViewer"
                Margin="0"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled">
                <ListView
                    x:Name="VersionsListView"
                    SelectionMode="Single"
                    ItemsSource="{Binding Versions, Mode=OneWay}"
                    IsItemClickEnabled="True"
                    CanReorderItems="False"
                    AllowDrop="False"
                    Visibility="{Binding IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"
                    Background="Transparent"
                    BorderThickness="0">
                    <ListView.Resources>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
                            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Margin" Value="0,0,0,16"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Grid x:Name="RootGrid" Background="{TemplateBinding Background}" CornerRadius="12">
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal" />
                                                    <VisualState x:Name="PointerOver">
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Opacity" To="0.9" Duration="0:0:0.1" />
                                                        </Storyboard>
                                                    </VisualState>
                                                    <VisualState x:Name="Pressed">
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Opacity" To="0.8" Duration="0:0:0.1" />
                                                        </Storyboard>
                                                    </VisualState>
                                                    <VisualState x:Name="Selected">
                                                        <Storyboard>
                                                            <!-- Removed selection border style -->
                                                        </Storyboard>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                            <ContentPresenter x:Name="ContentPresenter"
                                                              Content="{TemplateBinding Content}"
                                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                                              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                              Padding="{TemplateBinding Padding}"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    
                    <!-- 列表项模板 -->
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="130" 
                                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                  CornerRadius="12" 
                                  Padding="20" 
                                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                  BorderThickness="1">
                                <!-- 右键菜单 -->
                                <Grid.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem 
                                            x:Uid="VersionListPage_OpenFolderMenuItem"
                                            Command="{Binding DataContext.OpenFolderCommand, ElementName=VersionsListView}" 
                                            CommandParameter="{Binding}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE838;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem 
                                            x:Uid="VersionListPage_ExportModpackMenuItem"
                                            Command="{Binding DataContext.ExportModpackCommand, ElementName=VersionsListView}" 
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding IsValid}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE72C;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem 
                                            x:Uid="VersionListPage_GenerateLaunchScriptMenuItem"
                                            Text="生成启动参数"
                                            Command="{Binding DataContext.GenerateLaunchScriptCommand, ElementName=VersionsListView}" 
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding IsValid}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE756;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem 
                                            x:Uid="VersionListPage_CreateShortcutMenuItem"
                                            Text="创建快捷方式"
                                            Command="{Binding DataContext.CreateShortcutCommand, ElementName=VersionsListView}" 
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding IsValid}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE71B;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem 
                                            x:Uid="VersionListPage_CompleteVersionMenuItem"
                                            Text="版本补全"
                                            Command="{Binding DataContext.CompleteVersionCommand, ElementName=VersionsListView}" 
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding IsValid}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE896;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutSeparator />
                                        <MenuFlyoutItem 
                                            x:Uid="VersionListPage_RenameMenuItem"
                                            Text="重命名"
                                            Command="{Binding DataContext.RenameVersionCommand, ElementName=VersionsListView}" 
                                            CommandParameter="{Binding}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8AC;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem 
                                            x:Uid="VersionListPage_DeleteMenuItem"
                                            Command="{Binding DataContext.DeleteVersionCommand, ElementName=VersionsListView}" 
                                            CommandParameter="{Binding}">
                                            <MenuFlyoutItem.Icon>
                                                <SymbolIcon Symbol="Delete" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Grid.ContextFlyout>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- 版本名称 -->
                                <TextBlock 
                                    Grid.Row="0" Grid.Column="0"
                                    Text="{Binding Name}" 
                                    Style="{StaticResource PageTitleStyle}" 
                                    FontWeight="SemiBold" 
                                    FontSize="18" 
                                    Margin="0,0,8,0"/>
                                
                                <!-- 版本类型标签（支持多标签） -->
                                <ItemsControl 
                                    Grid.Row="0" Grid.Column="1"
                                    ItemsSource="{Binding LoaderTags}"
                                    HorizontalAlignment="Right">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="6" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border 
                                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                CornerRadius="8"
                                                Padding="12,4,12,4"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1">
                                                <TextBlock 
                                                    Text="{Binding}" 
                                                    Style="{StaticResource BodyTextStyle}" 
                                                    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" 
                                                    FontWeight="SemiBold" 
                                                    FontSize="12" />
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- 版本号 -->
                                <TextBlock 
                                    Grid.Row="1" Grid.Column="0"
                                    Style="{StaticResource BodyTextStyle}" 
                                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                                    FontSize="14" 
                                    VerticalAlignment="Center">
                                    <Run x:Uid="VersionListPage_VersionNumberLabel" Text="版本号: " />
                                    <Run Text="{Binding VersionNumber}" />
                                </TextBlock>
                                
                                <!-- 安装日期 -->
                                <TextBlock 
                                    Grid.Row="2" Grid.Column="0"
                                    Style="{StaticResource BodyTextStyle}" 
                                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                                    FontSize="14" 
                                    VerticalAlignment="Bottom">
                                    <Run x:Uid="VersionListPage_InstallDateLabel" Text="安装日期: " />
                                    <Run Text="{Binding InstallDate, Mode=OneWay, Converter={StaticResource DateTimeConverter}}" />
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
            
            <!-- 空列表提示 -->
            <StackPanel 
                x:Name="EmptyListPanel"
                Visibility="Collapsed"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Padding="60,40,60,40"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="16"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1">
                <FontIcon 
                    FontFamily="{StaticResource SymbolThemeFontFamily}" 
                    Glyph="&#xE8B7;" 
                    FontSize="80" 
                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                    Margin="0,0,0,24" 
                    HorizontalAlignment="Center"/>
                <TextBlock 
                    x:Uid="VersionListPage_EmptyListTitle"
                    Style="{StaticResource PageTitleStyle}" 
                    FontSize="20" 
                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                    TextAlignment="Center" 
                    Margin="0,0,0,8"/>
                <TextBlock 
                    x:Uid="VersionListPage_EmptyListDescription"
                    Style="{StaticResource BodyTextStyle}" 
                    Foreground="{ThemeResource SystemControlForegroundBaseMediumLowBrush}" 
                    Margin="0,0,0,0" 
                    TextAlignment="Center" 
                    MaxWidth="300"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>